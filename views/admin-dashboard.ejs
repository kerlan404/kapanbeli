        let activityLogsSearchTimer = null;

        // Activity type badge mapping
        const activityBadgeClasses = {
            'LOGIN': 'activity-badge-login',
            'LOGOUT': 'activity-badge-logout',
            'CREATE': 'activity-badge-create',
            'UPDATE': 'activity-badge-update',
            'DELETE': 'activity-badge-delete',
            'VIEW': 'activity-badge-view',
            'EXPORT': 'activity-badge-export',
            'IMPORT': 'activity-badge-import',
            'BAN': 'activity-badge-ban',
            'UNBAN': 'activity-badge-unban'
        };

        // --- INIT ---
        document.addEventListener('DOMContentLoaded', () => {
            initTheme();
            loadDashboardData();
            loadAnalytics();
            loadActivityLogs();
        });

        // --- THEME LOGIC ---
        function initTheme() {
            if (localStorage.getItem('theme') === 'dark' ||
               (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.body.classList.add('dark-mode-active');
                Chart.defaults.color = '#bdc3c7';
                Chart.defaults.borderColor = '#2c3e50';
            } else {
                Chart.defaults.color = '#2C3E50';
                Chart.defaults.borderColor = '#e9ecef';
            }
        }

        function toggleTheme() {
            document.body.classList.toggle('dark-mode-active');
            const isDark = document.body.classList.contains('dark-mode-active');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            Chart.defaults.color = isDark ? '#bdc3c7' : '#2C3E50';
            Chart.defaults.borderColor = isDark ? '#2c3e50' : '#e9ecef';

            // Update chart colors if chart exists
            if(growthChartInstance) {
                growthChartInstance.update();
            }
        }

        // --- ANALYTICS FUNCTIONS ---
        // Load analytics data
        async function loadAnalytics() {
            const range = document.getElementById('rangeFilter').value;
            const refreshBtn = document.getElementById('refreshBtn');

            // Show loading state
            if (refreshBtn) refreshBtn.classList.add('spinning');
            
            const loadingEl = document.getElementById('analyticsLoading');
            const contentEl = document.getElementById('analyticsContent');
            
            if (loadingEl) loadingEl.style.display = 'block';
            if (contentEl) contentEl.style.display = 'none';

            try {
                const response = await fetch(`/api/admin/analytics?range=${range}`);

                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('API Response:', response.status, errorText);
                    
                    // Show error with details
                    throw new Error(`HTTP ${response.status}: ${errorText.substring(0, 100)}`);
                }

                const data = await response.json();
                console.log('Analytics data received:', data);

                if (data.success) {
                    updateStatsCards(data.summary, data.period);
                    updateCharts(data.chart);
                    updateLastUpdated();

                    if (loadingEl) loadingEl.style.display = 'none';
                    if (contentEl) contentEl.style.display = 'block';
                } else {
                    console.error('API returned success: false:', data.message);
                    throw new Error(data.message || 'API returned success: false');
                }
            } catch (error) {
                console.error('Error loading analytics:', error);
                
                // Show error message in the analytics section
                const loadingEl = document.getElementById('analyticsLoading');
                const contentEl = document.getElementById('analyticsContent');
                

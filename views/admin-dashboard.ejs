        // Update pagination buttons
        function updateActivityPagination(pagination) {
            const { page, totalPages, total, limit } = pagination;
            const container = document.getElementById('activityPaginationButtons');
            const showingFrom = document.getElementById('activityShowingFrom');
            const showingTo = document.getElementById('activityShowingTo');
            const totalItems = document.getElementById('activityTotalItems');

            if (!container) return;

            // Update showing info
            if (showingFrom) showingFrom.textContent = total > 0 ? (page - 1) * limit + 1 : 0;
            if (showingTo) showingTo.textContent = Math.min(page * limit, total);
            if (totalItems) totalItems.textContent = total;

            // Generate pagination buttons
            let buttons = '';

            // Previous button
            buttons += `
                <button class="btn btn-outline" ${page <= 1 ? 'disabled' : ''} onclick="goToActivityPage(${page - 1})" 
                    style="padding: 8px 12px; ${page <= 1 ? 'opacity: 0.5; cursor: not-allowed;' : ''}">
                    <i class="fas fa-chevron-left"></i>
                </button>
            `;

            // Page numbers
            const maxVisible = 5;
            let startPage = Math.max(1, page - Math.floor(maxVisible / 2));
            let endPage = Math.min(totalPages, startPage + maxVisible - 1);

            if (endPage - startPage + 1 < maxVisible) {
                startPage = Math.max(1, endPage - maxVisible + 1);
            }

            if (startPage > 1) {
                buttons += `<button class="btn btn-outline" onclick="goToActivityPage(1)" style="padding: 8px 12px;">1</button>`;
                if (startPage > 2) {
                    buttons += `<span style="padding: 8px; color: var(--text-muted);">...</span>`;
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                buttons += `
                    <button class="btn ${i === page ? 'btn-primary' : 'btn-outline'}" 
                        onclick="goToActivityPage(${i})" 
                        style="padding: 8px 12px; min-width: 40px;">
                        ${i}
                    </button>
                `;
            }

            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    buttons += `<span style="padding: 8px; color: var(--text-muted);">...</span>`;
                }
                buttons += `<button class="btn btn-outline" onclick="goToActivityPage(${totalPages})" style="padding: 8px 12px;">${totalPages}</button>`;
            }

            // Next button
            buttons += `
                <button class="btn btn-outline" ${page >= totalPages ? 'disabled' : ''} onclick="goToActivityPage(${page + 1})" 
                    style="padding: 8px 12px; ${page >= totalPages ? 'opacity: 0.5; cursor: not-allowed;' : ''}">
                    <i class="fas fa-chevron-right"></i>
                </button>
            `;

            container.innerHTML = buttons;
        }


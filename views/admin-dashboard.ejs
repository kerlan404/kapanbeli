                const userRes = await fetch(`/api/admin/user/${userId}`, { credentials: 'same-origin' });
                const userData = await userRes.json();

                if (userData.success) {
                    const u = userData.user;
                    document.getElementById('detail-name').textContent = u.name;
                    document.getElementById('detail-email').textContent = u.email;
                    document.getElementById('detail-id').textContent = `#${u.id}`;
                    document.getElementById('detail-last-login').textContent = u.last_login ? new Date(u.last_login).toLocaleString('id-ID') : '-';

                    // Update mini stats (Assuming API returns these or we calculate them)
                    document.getElementById('userProductCount').textContent = u.product_count || 0;
                    document.getElementById('userLowStockCount').textContent = u.low_stock_count || 0;
                    document.getElementById('userNotesCount').textContent = u.note_count || 0;
                    document.getElementById('userSuggestionsCount').textContent = u.suggestion_count || 0;
                } else {
                    alert('User tidak ditemukan');
                    return;
                }

                // 2. Fetch User Products
                const prodRes = await fetch(`/api/admin/user/${userId}/products`, { credentials: 'same-origin' });
                const prodData = await prodRes.json();
                const prodTable = document.getElementById('userProductsTable');

                if (prodData.success && prodData.products && prodData.products.length > 0) {
                    prodTable.innerHTML = prodData.products.map(p => {
                        const stock = parseFloat(p.stock_quantity);
                        const min = parseFloat(p.min_stock_level || 0);
                        let badge = 'badge-success';
                        let status = 'Aman';

                        if (stock <= 0) { badge = 'badge-danger'; status = 'Habis'; }
                        else if (stock <= min) { badge = 'badge-warning'; status = 'Rendah'; }

                        return `
                            <tr>
                                <td><b>${p.name}</b></td>
                                <td>${stock} ${p.unit || ''}</td>
                                <td><span class="badge ${badge}">${status}</span></td>
                                <td><button class="btn btn-outline" style="padding: 4px 8px;"><i class="fas fa-eye"></i></button></td>
                            </tr>
                        `;
                    }).join('');
                } else {
                    prodTable.innerHTML = `<tr><td colspan="4" style="text-align:center; padding:20px; color:var(--text-muted);">Tidak ada produk</td></tr>`;
                }

                showPage('user-detail');

            } catch (error) {
                console.error('Error loading user detail:', error);
                alert('Gagal memuat data pengguna.');
            }
        }

        // --- SUGGESTIONS DATA LOADING ---
        async function loadSuggestionsData() {
            try {
                const res = await fetch('/api/suggestions/admin/all', { credentials: 'same-origin' });
                const data = await res.json();

                if (data.success) {
                    document.getElementById('adminLowStockCount').textContent = data.suggestions.filter(s => s.type === 'low-stock').length;
                    document.getElementById('adminExpiringCount').textContent = data.suggestions.filter(s => s.type === 'expiring').length;
                    renderSuggestionsTable(data.suggestions);
                } else {
                    renderSuggestionsTable([]);
                }
            } catch (error) {
                console.error('Error loading suggestions:', error);
                document.getElementById('suggestionsContainer').innerHTML = `
                    <div style="text-align: center; padding: 40px; color: var(--text-muted);">
                        <p>Gagal memuat data saran pembelian</p>
                    </div>
                `;
            }
        }

        function renderSuggestionsTable(suggestions) {
            const container = document.getElementById('suggestionsContainer');

            if (!suggestions || suggestions.length === 0) {
                container.innerHTML = `
                    <div style="text-align: center; padding: 40px; color: var(--text-muted);">
                        <i class="fas fa-check-circle" style="font-size: 3rem; margin-bottom: 15px; color: var(--accent-green);"></i>
                        <p>Tidak ada saran pembelian saat ini</p>
                        <p style="font-size: 0.9rem;">Stok semua pengguna dalam kondisi aman</p>
                    </div>
                `;
                return;
            }

            // Group by type
            const lowStock = suggestions.filter(s => s.type === 'low-stock');
            const expiring = suggestions.filter(s => s.type === 'expiring');

            let html = '';

            if (lowStock.length > 0) {
                html += `
                    <h4 style="margin: 20px 0 15px 0; color: var(--accent-red); display: flex; align-items: center; gap: 10px;">
                        <i class="fas fa-exclamation-triangle"></i> Stok Rendah (${lowStock.length})
                    </h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Pengguna</th>
                                    <th>Produk</th>
                                    <th>Stok Saat Ini</th>
                                    <th>Min. Stok</th>
                                    <th>Kadaluarsa</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${lowStock.map(s => `
                                    <tr>
                                        <td>
                                            <div style="font-weight: 600;">${s.user_name}</div>
                                            <div style="font-size: 0.8rem; color: var(--text-muted);">${s.user_email}</div>
                                        </td>
                                        <td><strong>${s.name}</strong></td>
                                        <td><span class="badge badge-warning">${s.stock_quantity} ${s.unit || ''}</span></td>
                                        <td>${s.min_stock_level || 0} ${s.unit || ''}</td>
                                        <td>${s.expiry_date ? new Date(s.expiry_date).toLocaleDateString('id-ID') : '-'}</td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                `;
            }

            if (expiring.length > 0) {
                html += `
                    <h4 style="margin: 30px 0 15px 0; color: var(--primary-orange); display: flex; align-items: center; gap: 10px;">
                        <i class="fas fa-clock"></i> Hampir Kadaluarsa (${expiring.length})
                    </h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Pengguna</th>
                                    <th>Produk</th>
                                    <th>Stok</th>
                                    <th>Sisa Hari</th>
                                    <th>Kadaluarsa</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${expiring.map(s => {
                                    const diffDays = Math.ceil((new Date(s.expiry_date) - new Date()) / (1000 * 60 * 60 * 24));
                                    return `
                                        <tr>
                                            <td>
                                                <div style="font-weight: 600;">${s.user_name}</div>
                                                <div style="font-size: 0.8rem; color: var(--text-muted);">${s.user_email}</div>
                                            </td>
                                            <td><strong>${s.name}</strong></td>
                                            <td>${s.stock_quantity} ${s.unit || ''}</td>
                                            <td><span class="badge ${diffDays <= 3 ? 'badge-danger' : 'badge-warning'}">${diffDays} hari</span></td>
                                            <td>${s.expiry_date ? new Date(s.expiry_date).toLocaleDateString('id-ID') : '-'}</td>
                                        </tr>
                                    `;
                                }).join('')}
                            </tbody>
                        </table>
                    </div>
                `;
            }

            container.innerHTML = html;
        }

        // Handle logout function
        async function handleLogout() {
            try {
                const response = await fetch('/auth/logout', { method: 'POST', credentials: 'same-origin' });
                const data = await response.json();
                if (response.ok) {
                    window.location.href = data.redirect || '/';
                }
            } catch (error) {
                console.error('Logout error', error);
            }
        }
    </script>

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Saya - Kapan Beli</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üë§</text></svg>" type="image/x-icon">

    <style>
        :root {
            --primary-blue: #2E86DE;
            --primary-blue-dark: #1B5F9E;
            --primary-orange: #FF9F43;
            --primary-orange-dark: #E67E22;
            --bg-body: #E3E9EF;
            --bg-card: #FFFFFF;
            --text-main: #2C3E50;
            --text-muted: #636E72;
            --border-radius: 16px;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.06);
            --shadow-md: 0 8px 24px rgba(0,0,0,0.10);
            --shadow-lg: 0 12px 40px rgba(0,0,0,0.15);
            --danger: #FF6B6B;
            --danger-dark: #EE5A5A;
            --success: #1DD1A1;
            --success-dark: #10B981;
            --warning: #FFB74D;
            --purple: #9C27B0;
        }

        body.dark-mode-active {
            --bg-body: #0F1419;
            --bg-card: #1E2933;
            --text-main: #ECF0F1;
            --text-muted: #94A3B8;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.4);
            --shadow-md: 0 8px 24px rgba(0,0,0,0.5);
            --shadow-lg: 0 12px 40px rgba(0,0,0,0.6);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--bg-body) 0%, var(--bg-body) 100%);
            background-image: 
                radial-gradient(circle at 20% 30%, rgba(46, 134, 222, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(255, 159, 67, 0.08) 0%, transparent 50%),
                radial-gradient(var(--text-muted) 1px, transparent 1px);
            background-size: 100% 100%, 100% 100%, 40px 40px;
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        nav {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid rgba(0,0,0,0.06);
            padding: 12px 5%;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        }

        body.dark-mode-active nav {
            background: rgba(30, 41, 51, 0.85);
            border-bottom: 1px solid rgba(255,255,255,0.06);
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .logo {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--text-main);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 16px;
            border-radius: 12px;
            transition: all 0.3s;
        }

        .logo:hover {
            background: rgba(46, 134, 222, 0.1);
        }

        .logo i { 
            color: var(--primary-orange);
            filter: drop-shadow(0 2px 4px rgba(255, 159, 67, 0.3));
        }

        .nav-menu {
            display: flex;
            gap: 8px;
        }

        .nav-link {
            text-decoration: none;
            color: var(--text-muted);
            font-weight: 500;
            font-size: 0.95rem;
            position: relative;
            padding: 10px 18px;
            border-radius: 10px;
            transition: all 0.3s;
        }

        .nav-link:hover {
            color: var(--text-main);
            background: rgba(46, 134, 222, 0.08);
        }
        
        .nav-link.active {
            color: var(--primary-blue);
            background: rgba(46, 134, 222, 0.1);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 3px;
            bottom: 4px;
            left: 50%;
            transform: translateX(-50%);
            background: linear-gradient(90deg, var(--primary-blue), var(--primary-orange));
            transition: width 0.3s ease;
            border-radius: 2px;
        }

        .nav-link:hover::after, .nav-link.active::after {
            width: 60%;
        }

        .dark-mode-toggle {
            background: rgba(0,0,0,0.05);
            border: none;
            color: var(--text-main);
            font-size: 1.1rem;
            cursor: pointer;
            width: 42px;
            height: 42px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

        .dark-mode-toggle:hover {
            background: rgba(46, 134, 222, 0.15);
            transform: rotate(15deg);
        }

        /* Navbar User Elements */
        .nav-user-name {
            padding: 0 8px;
        }

        .nav-profile-photo-link {
            display: none;
        }

        .nav-profile-photo {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-orange);
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .nav-profile-photo:hover {
            transform: scale(1.1);
            border-color: var(--primary-blue);
            box-shadow: 0 4px 12px rgba(46, 134, 222, 0.3);
        }

        .nav-profile-icon {
            padding: 8px 12px;
            font-size: 1.2rem;
        }

        .nav-logout {
            padding: 8px 16px;
            background: rgba(255, 107, 107, 0.1);
            border-radius: 8px;
            transition: all 0.3s;
        }

        .nav-logout:hover {
            background: rgba(255, 107, 107, 0.2);
            color: var(--danger);
        }

        /* Main Content */
        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 30px 20px;
            width: 100%;
            flex: 1;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            padding: 35px 40px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            margin-bottom: 35px;
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

        .page-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 150px;
            height: 150px;
            background: rgba(255,255,255,0.08);
            border-radius: 50%;
        }

        .page-title {
            font-size: 1.7rem;
            font-weight: 700;
            color: white;
            display: flex;
            align-items: center;
            gap: 15px;
            position: relative;
            z-index: 1;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        /* Profile Header Card */
        .profile-header-card {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            padding: 45px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-md);
            display: flex;
            align-items: center;
            gap: 35px;
            border: 1px solid rgba(0,0,0,0.05);
            position: relative;
            overflow: hidden;
        }

        .profile-header-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-blue), var(--primary-orange), var(--purple));
        }

        .profile-avatar-wrapper {
            position: relative;
            cursor: pointer;
            flex-shrink: 0;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-blue), var(--primary-orange));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            font-weight: 700;
            box-shadow: 0 8px 25px rgba(46, 134, 222, 0.3);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .profile-avatar-wrapper:hover .profile-avatar {
            transform: scale(1.05);
            box-shadow: 0 12px 35px rgba(46, 134, 222, 0.4);
        }

        .profile-avatar-wrapper:hover .avatar-edit-badge {
            transform: scale(1.1);
            background: var(--primary-orange);
        }

        .avatar-edit-badge {
            position: absolute;
            bottom: 5px;
            right: 5px;
            background: var(--primary-blue);
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid var(--bg-card);
            transition: all 0.3s;
        }

        .profile-info {
            flex: 1;
        }

        .profile-info h2 {
            font-size: 2rem;
            color: var(--text-main);
            margin-bottom: 12px;
            font-weight: 700;
        }

        .profile-info p {
            color: var(--text-muted);
            font-size: 1rem;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .profile-info p i {
            color: var(--primary-blue);
            width: 20px;
        }

        .profile-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 18px;
            background: linear-gradient(135deg, rgba(46, 134, 222, 0.1), rgba(46, 134, 222, 0.05));
            color: var(--primary-blue);
            border-radius: 25px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-top: 15px;
            border: 1px solid rgba(46, 134, 222, 0.2);
        }

        .profile-hint {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Settings Cards */
        .settings-section {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            padding: 35px;
            margin-bottom: 25px;
            box-shadow: var(--shadow-sm);
            border: 1px solid rgba(0,0,0,0.05);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .settings-section:hover {
            box-shadow: var(--shadow-md);
        }

        .section-header {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid rgba(0,0,0,0.06);
        }

        .section-icon {
            width: 55px;
            height: 55px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            flex-shrink: 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .section-icon.profile {
            background: linear-gradient(135deg, #2E86DE, #1B5F9E);
            color: white;
        }

        .section-icon.password {
            background: linear-gradient(135deg, #FF9F43, #E67E22);
            color: white;
        }

        .section-icon.danger {
            background: linear-gradient(135deg, #FF6B6B, #EE5A5A);
            color: white;
        }

        .section-info {
            flex: 1;
        }

        .section-title {
            font-size: 1.35rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 5px;
        }

        .section-description {
            font-size: 0.9rem;
            color: var(--text-muted);
            line-height: 1.5;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--text-main);
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-label i {
            color: var(--primary-blue);
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid rgba(0,0,0,0.08);
            border-radius: 12px;
            background: var(--bg-body);
            color: var(--text-main);
            font-family: inherit;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-blue);
            background: var(--bg-card);
            box-shadow: 0 0 0 4px rgba(46, 134, 222, 0.1);
            transform: translateY(-1px);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        /* Buttons */
        .btn {
            padding: 14px 28px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark));
            color: white;
            box-shadow: 0 4px 15px rgba(46, 134, 222, 0.35);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 134, 222, 0.45);
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-dark));
            color: white;
            box-shadow: 0 4px 15px rgba(255, 159, 67, 0.35);
        }

        .btn-warning:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 159, 67, 0.45);
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger), var(--danger-dark));
            color: white;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.35);
        }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 107, 107, 0.45);
        }

        .btn-block {
            width: 100%;
        }

        .btn i {
            font-size: 1rem;
        }

        /* Info Box */
        .info-box {
            background: linear-gradient(135deg, rgba(46, 134, 222, 0.08), rgba(46, 134, 222, 0.02));
            border-left: 4px solid var(--primary-blue);
            padding: 18px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
        }

        .info-box i {
            font-size: 1.2rem;
            color: var(--primary-blue);
            margin-top: 2px;
        }

        .info-box p {
            font-size: 0.9rem;
            color: var(--text-muted);
            margin: 0;
            line-height: 1.6;
        }

        .info-box.danger {
            background: linear-gradient(135deg, rgba(255, 107, 107, 0.08), rgba(255, 107, 107, 0.02));
            border-left-color: var(--danger);
        }

        .info-box.danger i {
            color: var(--danger);
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--shadow-sm);
            text-align: center;
            border: 1px solid rgba(0,0,0,0.05);
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
        }

        .stat-card:nth-child(1)::before {
            background: linear-gradient(90deg, var(--primary-blue), #5FA8F0);
        }

        .stat-card:nth-child(2)::before {
            background: linear-gradient(90deg, var(--primary-orange), #FFC278);
        }

        .stat-card:nth-child(3)::before {
            background: linear-gradient(90deg, var(--success), #5CE1B8);
        }

        .stat-card:nth-child(4)::before {
            background: linear-gradient(90deg, var(--danger), #FF9E9E);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6rem;
            margin: 0 auto 18px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .stat-icon.products {
            background: linear-gradient(135deg, var(--primary-blue), #5FA8F0);
            color: white;
        }

        .stat-icon.notes {
            background: linear-gradient(135deg, var(--primary-orange), #FFC278);
            color: white;
        }

        .stat-icon.shopping {
            background: linear-gradient(135deg, var(--success), #5CE1B8);
            color: white;
        }

        .stat-icon.warning {
            background: linear-gradient(135deg, var(--danger), #FF9E9E);
            color: white;
        }

        .stat-value {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 5px;
            line-height: 1;
        }

        .stat-label {
            font-size: 0.9rem;
            color: var(--text-muted);
            font-weight: 500;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-menu {
                display: none;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .container {
                padding: 0 15px;
            }

            .settings-section {
                padding: 25px;
            }

            .profile-header-card {
                flex-direction: column;
                text-align: center;
                padding: 30px 20px;
            }

            .profile-info {
                text-align: center;
            }

            .profile-info p {
                justify-content: center;
            }

            .page-header {
                padding: 25px 20px;
            }

            .page-title {
                font-size: 1.4rem;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .stat-card {
                padding: 20px 15px;
            }

            .stat-icon {
                width: 50px;
                height: 50px;
                font-size: 1.3rem;
            }

            .stat-value {
                font-size: 1.8rem;
            }
        }

        @media (max-width: 480px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <nav>
        <div class="nav-container">
            <a href="/" class="logo">
                <i class="fas fa-book-open"></i>
                Kapan Beli
            </a>
            <div class="nav-menu">
                <a href="/" class="nav-link">Beranda</a>
                <a href="/notes" class="nav-link">Catatan Saya</a>
                <a href="/products" class="nav-link">Bahan Saya</a>
                <a href="/suggestions" class="nav-link">Saran Pembelian</a>
            </div>
            <div style="display: flex; align-items: center; gap: 12px;">
                <span id="userName" class="nav-user-name" style="font-size: 0.9rem; font-weight: 600; color: var(--text-main); display: none;">User</span>
                <a href="/user-profile" id="profilePhotoLink" class="nav-profile-photo-link" style="display:none;">
                    <img id="navProfilePhoto" src="" alt="Profile" class="nav-profile-photo" />
                </a>
                <a href="/user-profile" id="profileLink" class="nav-link nav-profile-icon" style="font-size: 0.9rem; display:none;" title="Profil"><i class="fas fa-user-circle"></i></a>
                <a href="/auth/logout" class="nav-link nav-logout" style="font-size: 0.9rem;"><i class="fas fa-sign-out-alt" style="margin-right: 5px;"></i>Keluar</a>
                <button class="dark-mode-toggle"><i class="fas fa-moon"></i></button>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <i class="fas fa-user-circle" style="color: var(--primary-orange);"></i>
                Profil Saya
            </div>
        </div>

        <!-- Profile Header Card -->
        <div class="profile-header-card">
            <div class="profile-avatar-wrapper" onclick="document.getElementById('profilePhotoInput').click()">
                <div class="profile-avatar" id="profileAvatar">U</div>
                <img id="profileAvatarImg" src="" alt="Profile" style="display: none; width: 120px; height: 120px; border-radius: 50%; object-fit: cover; box-shadow: 0 8px 25px rgba(46, 134, 222, 0.3);">
                <div class="avatar-edit-badge">
                    <i class="fas fa-camera"></i>
                </div>
                <input type="file" id="profilePhotoInput" accept="image/*" style="display: none;" onchange="previewProfilePhoto(event)">
            </div>
            <div class="profile-info">
                <h2 id="profileNameDisplay">Loading...</h2>
                <p><i class="fas fa-envelope"></i> <span id="profileEmailDisplay">-</span></p>
                <p><i class="fas fa-calendar-alt"></i> Bergabung <span id="memberSince">-</span></p>
                <span class="profile-badge"><i class="fas fa-user-circle"></i> Akun Pengguna</span>
                <div class="profile-hint">
                    <i class="fas fa-lightbulb"></i>
                    <span>Klik foto profil untuk mengubah foto Anda</span>
                </div>
            </div>
        </div>

        <!-- User Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon products">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-value" id="totalProducts">0</div>
                <div class="stat-label">Total Bahan</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon notes">
                    <i class="fas fa-sticky-note"></i>
                </div>
                <div class="stat-value" id="totalNotes">0</div>
                <div class="stat-label">Catatan</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon shopping">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-value" id="shoppingList">0</div>
                <div class="stat-label">Daftar Belanja</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon warning">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stat-value" id="lowStock">0</div>
                <div class="stat-label">Stok Menipis</div>
            </div>
        </div>

        <!-- Profile Settings -->
        <div class="settings-section">
            <div class="section-header">
                <div class="section-icon profile">
                    <i class="fas fa-user-edit"></i>
                </div>
                <div class="section-info">
                    <div class="section-title">Edit Profil</div>
                    <div class="section-description">Perbarui informasi profil Anda sesuai keinginan</div>
                </div>
            </div>

            <form id="profileForm">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-user"></i>
                        Nama Lengkap
                    </label>
                    <input type="text" id="profileName" class="form-control" placeholder="Masukkan nama lengkap Anda" required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input type="email" id="profileEmail" class="form-control" placeholder="Masukkan email Anda" required>
                </div>

                <div class="info-box">
                    <i class="fas fa-info-circle"></i>
                    <p>Email Anda digunakan untuk login dan notifikasi penting.</p>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Simpan Perubahan
                </button>
            </form>
        </div>

        <!-- Password Settings -->
        <div class="settings-section">
            <div class="section-header">
                <div class="section-icon password">
                    <i class="fas fa-lock"></i>
                </div>
                <div class="section-info">
                    <div class="section-title">Ubah Password</div>
                    <div class="section-description">Ganti password akun Anda untuk keamanan</div>
                </div>
            </div>

            <form id="passwordForm">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-key"></i>
                        Password Saat Ini <span style="color: var(--danger);">*</span>
                    </label>
                    <input type="password" id="currentPassword" class="form-control" placeholder="Masukkan password saat ini" required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-lock"></i>
                            Password Baru
                        </label>
                        <input type="password" id="newPassword" class="form-control" placeholder="Minimal 6 karakter" required minlength="6">
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-lock"></i>
                            Konfirmasi Password Baru
                        </label>
                        <input type="password" id="confirmPassword" class="form-control" placeholder="Ulangi password baru" required minlength="6">
                    </div>
                </div>

                <div class="info-box">
                    <i class="fas fa-shield-alt"></i>
                    <p>Password minimal 6 karakter. Gunakan kombinasi huruf, angka, dan simbol untuk keamanan lebih.</p>
                </div>

                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-key"></i> Ubah Password
                </button>
            </form>
        </div>

        <!-- Danger Zone -->
        <div class="settings-section">
            <div class="section-header">
                <div class="section-icon danger">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="section-info">
                    <div class="section-title">Zona Bahaya</div>
                    <div class="section-description">Tindakan permanen dan tidak dapat dibatalkan</div>
                </div>
            </div>

            <div class="info-box danger">
                <i class="fas fa-triangle-exclamation"></i>
                <p><strong>Perhatian!</strong> Menghapus akun akan menghapus semua data Anda termasuk bahan dan catatan secara permanen.</p>
            </div>

            <button type="button" class="btn btn-danger btn-block" onclick="confirmDeleteAccount()">
                <i class="fas fa-trash-alt"></i> Hapus Akun Saya
            </button>
        </div>
    </div>

    <script>
        // Dark Mode
        const toggleBtn = document.querySelector('.dark-mode-toggle');
        const body = document.body;

        if (localStorage.getItem('theme') === 'dark' ||
            (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            body.classList.add('dark-mode-active');
            toggleBtn.innerHTML = '<i class="fas fa-sun"></i>';
        }

        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode-active');
            const isDark = body.classList.contains('dark-mode-active');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            toggleBtn.innerHTML = isDark ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
        });

        // Load User Info
        async function loadUserInfo() {
            try {
                const res = await fetch('/auth/status', {
                    method: 'GET',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const data = await res.json();
                if (data.authenticated) {
                    const userEl = document.getElementById('userName');
                    const profilePhotoLink = document.getElementById('profilePhotoLink');
                    const profileLink = document.getElementById('profileLink');
                    const navProfilePhoto = document.getElementById('navProfilePhoto');

                    userEl.textContent = data.user.name;
                    userEl.style.display = 'block';

                    // Show profile photo if exists
                    if (data.user.profile_photo) {
                        navProfilePhoto.src = data.user.profile_photo;
                        navProfilePhoto.style.display = 'inline-block';
                        profilePhotoLink.style.display = 'inline-block';
                        profileLink.style.display = 'none';
                    } else {
                        profilePhotoLink.style.display = 'none';
                        profileLink.style.display = 'inline-block';
                    }

                    loadProfile(data.user.id);
                    loadUserStats(data.user.id);
                } else {
                    window.location.href = '/auth';
                }
            } catch(e) {
                window.location.href = '/auth';
            }
        }

        // Load User Stats
        async function loadUserStats(userId) {
            try {
                console.log('=== LOAD USER STATS ===');
                console.log('Loading stats for user ID:', userId);
                
                const res = await fetch('/api/dashboard/stats');
                console.log('Stats API response status:', res.status);
                
                const data = await res.json();
                console.log('Stats data:', data);

                if (data.success) {
                    // Update stats dengan data dari user yang login
                    document.getElementById('totalProducts').textContent = data.stats.totalProducts || 0;
                    document.getElementById('totalNotes').textContent = data.stats.totalNotes || 0;
                    document.getElementById('shoppingList').textContent = data.stats.shoppingList || 0;
                    document.getElementById('lowStock').textContent = data.stats.lowStock || 0;
                    
                    console.log('Stats loaded successfully!');
                    console.log('Total Products:', data.stats.totalProducts);
                    console.log('Total Notes:', data.stats.totalNotes);
                    console.log('Shopping List:', data.stats.shoppingList);
                    console.log('Low Stock:', data.stats.lowStock);
                } else {
                    console.error('Failed to load stats:', data.message);
                    // Set default values if failed
                    document.getElementById('totalProducts').textContent = '0';
                    document.getElementById('totalNotes').textContent = '0';
                    document.getElementById('shoppingList').textContent = '0';
                    document.getElementById('lowStock').textContent = '0';
                }
            } catch(e) {
                console.error('Error loading stats:', e);
                // Set default values if error
                document.getElementById('totalProducts').textContent = '0';
                document.getElementById('totalNotes').textContent = '0';
                document.getElementById('shoppingList').textContent = '0';
                document.getElementById('lowStock').textContent = '0';
            }
        }

        // Load Profile Data
        async function loadProfile(userId) {
            try {
                console.log('=== LOAD PROFILE ===');
                console.log('Loading profile for user ID:', userId);
                
                const res = await fetch('/api/profile/profile');
                console.log('Response status:', res.status);
                
                const data = await res.json();
                console.log('Profile data:', data);

                if (data.success) {
                    const user = data.user;
                    
                    // Set form values
                    document.getElementById('profileName').value = user.name;
                    document.getElementById('profileEmail').value = user.email;
                    
                    // Set display values
                    document.getElementById('profileNameDisplay').textContent = user.name;
                    document.getElementById('profileEmailDisplay').textContent = user.email;
                    
                    // Set profile photo
                    const avatarImg = document.getElementById('profileAvatarImg');
                    const avatarInitial = document.getElementById('profileAvatar');
                    
                    if (user.profile_photo) {
                        avatarImg.src = user.profile_photo;
                        avatarImg.style.display = 'block';
                        avatarInitial.style.display = 'none';
                    } else {
                        avatarImg.style.display = 'none';
                        avatarInitial.style.display = 'flex';
                        const initial = user.name.charAt(0).toUpperCase();
                        avatarInitial.textContent = initial;
                    }
                    
                    // Set member since
                    const memberSince = new Date(user.created_at).toLocaleDateString('id-ID', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });
                    document.getElementById('memberSince').textContent = memberSince;
                    
                    console.log('Profile loaded successfully!');
                } else {
                    console.error('Failed to load profile:', data.message);
                }
            } catch(e) {
                console.error('Error loading profile:', e);
            }
        }

        // Update Profile
        document.getElementById('profileForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = document.getElementById('profileName').value;
            const email = document.getElementById('profileEmail').value;

            try {
                const res = await fetch('/api/profile/profile', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, email })
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Profil Diperbarui',
                        text: 'Profil Anda berhasil diperbarui.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2E86DE'
                    });

                    // Update display values
                    document.getElementById('profileNameDisplay').textContent = name;
                    document.getElementById('userName').textContent = name;
                    
                    // Update avatar initial
                    const initial = name.charAt(0).toUpperCase();
                    document.getElementById('profileAvatar').textContent = initial;
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat memperbarui profil.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        });

        // Update Password
        document.getElementById('passwordForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal',
                    text: 'Password baru dan konfirmasi password tidak cocok.',
                    confirmButtonText: 'OK'
                });
                return;
            }

            try {
                const res = await fetch('/api/profile/password', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newPassword, confirmPassword })
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Password Diubah',
                        text: 'Password Anda berhasil diubah.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#FF9F43'
                    });

                    // Clear password fields
                    document.getElementById('currentPassword').value = '';
                    document.getElementById('newPassword').value = '';
                    document.getElementById('confirmPassword').value = '';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat mengubah password.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        });

        // Delete Account Confirmation
        async function confirmDeleteAccount() {
            const result = await Swal.fire({
                title: 'Hapus Akun?',
                html: `
                    <div style="text-align: left;">
                        <p style="color: var(--danger); font-weight: 600; margin-bottom: 15px; font-size: 1.1rem;">
                            ‚ö†Ô∏è Peringatan: Tindakan ini tidak dapat dibatalkan!
                        </p>
                        <p style="margin-bottom: 15px;">Semua data berikut akan dihapus permanen:</p>
                        <ul style="margin: 10px 0; padding-left: 20px;">
                            <li style="margin: 8px 0;">Semua bahan dapur Anda</li>
                            <li style="margin: 8px 0;">Semua catatan Anda</li>
                            <li style="margin: 8px 0;">Data akun Anda</li>
                        </ul>
                        <div style="background: rgba(255, 107, 107, 0.1); padding: 15px; border-radius: 8px; margin-top: 20px; border-left: 3px solid var(--danger);">
                            <p style="color: var(--danger); font-weight: 600; margin: 0; font-size: 0.9rem;">
                                <i class="fas fa-exclamation-circle"></i> Pastikan Anda sudah export data penting sebelum melanjutkan!
                            </p>
                        </div>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#FF6B6B',
                cancelButtonColor: '#636E72',
                confirmButtonText: 'Ya, Hapus Akun',
                cancelButtonText: 'Batal',
                reverseButtons: true,
                customClass: {
                    container: 'delete-account-modal'
                }
            });

            if (result.isConfirmed) {
                deleteAccount();
            }
        }

        // Delete Account
        async function deleteAccount() {
            try {
                const res = await fetch('/api/profile/account', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await res.json();

                if (data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Akun Dihapus',
                        text: 'Akun Anda telah dihapus. Terima kasih telah menggunakan Kapan Beli!',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2E86DE',
                        timer: 3000
                    });

                    window.location.href = data.redirect || '/';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat menghapus akun.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', loadUserInfo);

        // Preview profile photo before upload
        function previewProfilePhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profileAvatarImg').src = e.target.result;
                    document.getElementById('profileAvatarImg').style.display = 'block';
                    document.getElementById('profileAvatar').style.display = 'none';
                    
                    // Show confirmation dialog
                    Swal.fire({
                        title: 'Upload Foto Profil?',
                        text: 'Apakah Anda ingin menyimpan foto ini sebagai foto profil?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#2E86DE',
                        cancelButtonColor: '#636E72',
                        confirmButtonText: 'Ya, Upload',
                        cancelButtonText: 'Batal'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            uploadProfilePhoto(file);
                        } else {
                            // Reset to previous state
                            loadProfilePhoto();
                        }
                    });
                };
                reader.readAsDataURL(file);
            }
        }

        // Upload profile photo
        async function uploadProfilePhoto(file) {
            try {
                const formData = new FormData();
                formData.append('profile_photo', file);

                const res = await fetch('/api/profile/photo', {
                    method: 'POST',
                    body: formData
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Foto Profil Diperbarui',
                        text: 'Foto profil Anda berhasil diubah.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2E86DE'
                    });
                    
                    // Reload profile to show new photo
                    loadUserInfo();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat upload foto.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        }

        // Load profile photo
        function loadProfilePhoto() {
            const currentPhoto = document.getElementById('profileAvatarImg').src;
            if (currentPhoto && currentPhoto !== window.location.href) {
                document.getElementById('profileAvatarImg').style.display = 'block';
                document.getElementById('profileAvatar').style.display = 'none';
            } else {
                document.getElementById('profileAvatarImg').style.display = 'none';
                document.getElementById('profileAvatar').style.display = 'flex';
            }
        }
    </script>

    <!-- Footer -->
    <%- include('./partials/footer') %>
</body>
</html>

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Saya - Kapan Beli</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üë§</text></svg>" type="image/x-icon">

    <style>
        :root {
            --primary-blue: #2E86DE;
            --primary-orange: #FF9F43;
            --bg-body: #E3E9EF;
            --bg-card: #FFFFFF;
            --text-main: #2C3E50;
            --text-muted: #636E72;
            --border-radius: 12px;
            --shadow-sm: 0 2px 5px rgba(0,0,0,0.05);
            --shadow-md: 0 8px 20px rgba(0,0,0,0.12);
            --danger: #FF6B6B;
            --success: #1DD1A1;
        }

        body.dark-mode-active {
            --bg-body: #1a2228;
            --bg-card: #2d3b45;
            --text-main: #ECF0F1;
            --text-muted: #B2BEC3;
            --shadow-sm: 0 4px 6px rgba(0,0,0,0.3);
            --shadow-md: 0 8px 20px rgba(0,0,0,0.5);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            transition: background 0.3s, color 0.3s, border-color 0.3s;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-body);
            background-image: radial-gradient(var(--text-muted) 1px, transparent 1px);
            background-size: 30px 30px;
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        nav {
            background: var(--bg-card);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 15px 5%;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: var(--shadow-sm);
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .logo {
            font-weight: 700;
            font-size: 1.4rem;
            color: var(--text-main);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo i { color: var(--primary-orange); }

        .nav-menu {
            display: flex;
            gap: 30px;
        }

        .nav-link {
            text-decoration: none;
            color: var(--text-muted);
            font-weight: 500;
            font-size: 0.95rem;
            position: relative;
            padding: 5px 0;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--primary-blue);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: var(--primary-orange);
            transition: width 0.3s ease;
            border-radius: 2px;
        }

        .nav-link:hover::after, .nav-link.active::after {
            width: 100%;
        }

        .dark-mode-toggle {
            background: transparent;
            border: none;
            color: var(--text-main);
            font-size: 1.2rem;
            cursor: pointer;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .dark-mode-toggle:hover {
            background: rgba(0,0,0,0.05);
        }

        /* Main Content */
        .container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
            width: 100%;
            flex: 1;
        }

        .page-header {
            background: var(--bg-card);
            padding: 30px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            margin-bottom: 30px;
            border-left: 5px solid var(--primary-orange);
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-main);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Profile Header Card */
        .profile-header-card {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            gap: 30px;
            border-left: 5px solid var(--primary-blue);
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-blue), var(--primary-orange));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            font-weight: 700;
            flex-shrink: 0;
        }

        .profile-info h2 {
            font-size: 1.8rem;
            color: var(--text-main);
            margin-bottom: 8px;
        }

        .profile-info p {
            color: var(--text-muted);
            font-size: 0.95rem;
            margin-bottom: 5px;
        }

        .profile-badge {
            display: inline-block;
            padding: 5px 15px;
            background: rgba(46, 134, 222, 0.1);
            color: var(--primary-blue);
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 10px;
        }

        /* Settings Cards */
        .settings-section {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: var(--shadow-sm);
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(0,0,0,0.05);
        }

        .section-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
        }

        .section-icon.profile {
            background: rgba(46, 134, 222, 0.1);
            color: var(--primary-blue);
        }

        .section-icon.password {
            background: rgba(255, 159, 67, 0.1);
            color: var(--primary-orange);
        }

        .section-icon.danger {
            background: rgba(255, 107, 107, 0.1);
            color: var(--danger);
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-main);
        }

        .section-description {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 3px;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--text-main);
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid rgba(0,0,0,0.1);
            border-radius: 8px;
            background: var(--bg-body);
            color: var(--text-main);
            font-family: inherit;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-orange);
            background: var(--bg-card);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        /* Buttons */
        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .btn-primary {
            background: var(--primary-blue);
            color: white;
            box-shadow: 0 4px 10px rgba(46, 134, 222, 0.3);
        }

        .btn-primary:hover {
            background: #2373c7;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(46, 134, 222, 0.4);
        }

        .btn-warning {
            background: var(--primary-orange);
            color: white;
            box-shadow: 0 4px 10px rgba(255, 159, 67, 0.3);
        }

        .btn-warning:hover {
            background: #f08c38;
            transform: translateY(-2px);
        }

        .btn-danger {
            background: var(--danger);
            color: white;
            box-shadow: 0 4px 10px rgba(255, 107, 107, 0.3);
        }

        .btn-danger:hover {
            background: #ff5252;
            transform: translateY(-2px);
        }

        .btn-block {
            width: 100%;
            justify-content: center;
        }

        /* Info Box */
        .info-box {
            background: rgba(46, 134, 222, 0.05);
            border-left: 4px solid var(--primary-blue);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .info-box p {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin: 0;
        }

        .info-box.danger {
            background: rgba(255, 107, 107, 0.05);
            border-left-color: var(--danger);
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            padding: 20px;
            box-shadow: var(--shadow-sm);
            text-align: center;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 15px;
        }

        .stat-icon.products {
            background: rgba(46, 134, 222, 0.1);
            color: var(--primary-blue);
        }

        .stat-icon.notes {
            background: rgba(255, 159, 67, 0.1);
            color: var(--primary-orange);
        }

        .stat-icon.shopping {
            background: rgba(29, 209, 161, 0.1);
            color: var(--success);
        }

        .stat-icon.warning {
            background: rgba(255, 107, 107, 0.1);
            color: var(--danger);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-menu {
                display: none;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .container {
                padding: 0 15px;
            }

            .settings-section {
                padding: 20px;
            }

            .profile-header-card {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <nav>
        <div class="nav-container">
            <a href="/" class="logo">
                <i class="fas fa-book-open"></i>
                Kapan Beli
            </a>
            <div class="nav-menu">
                <a href="/" class="nav-link">Beranda</a>
                <a href="/notes" class="nav-link">Catatan Saya</a>
                <a href="/products" class="nav-link">Bahan Saya</a>
                <a href="/suggestions" class="nav-link">Saran Pembelian</a>
            </div>
            <div style="display: flex; align-items: center; gap: 15px;">
                <span id="userName" style="font-size: 0.85rem; font-weight: 600; color: var(--text-main); display: none;">User</span>
                <a href="/auth/logout" class="nav-link" style="font-size: 0.85rem;">Keluar</a>
                <button class="dark-mode-toggle"><i class="fas fa-moon"></i></button>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <i class="fas fa-user-circle" style="color: var(--primary-orange);"></i>
                Profil Saya
            </div>
        </div>

        <!-- Profile Header Card -->
        <div class="profile-header-card">
            <div class="profile-avatar" id="profileAvatarContainer" style="position: relative; cursor: pointer;" onclick="document.getElementById('profilePhotoInput').click()">
                <div class="profile-avatar" id="profileAvatar">U</div>
                <img id="profileAvatarImg" src="" alt="Profile" style="display: none; width: 100px; height: 100px; border-radius: 50%; object-fit: cover; border: 3px solid var(--primary-orange);">
                <div style="position: absolute; bottom: 0; right: 0; background: var(--primary-orange); color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; border: 2px solid white;">
                    <i class="fas fa-camera" style="font-size: 0.9rem;"></i>
                </div>
                <input type="file" id="profilePhotoInput" accept="image/*" style="display: none;" onchange="previewProfilePhoto(event)">
            </div>
            <div class="profile-info">
                <h2 id="profileNameDisplay">Loading...</h2>
                <p><i class="fas fa-envelope"></i> <span id="profileEmailDisplay">-</span></p>
                <p><i class="fas fa-calendar"></i> Bergabung <span id="memberSince">-</span></p>
                <span class="profile-badge"><i class="fas fa-user"></i> Akun Pengguna</span>
                <p style="font-size: 0.85rem; color: var(--text-muted); margin-top: 10px;">
                    <i class="fas fa-info-circle"></i> Klik foto untuk mengubah
                </p>
            </div>
        </div>

        <!-- User Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon products">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-value" id="totalProducts">0</div>
                <div class="stat-label">Total Bahan</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon notes">
                    <i class="fas fa-sticky-note"></i>
                </div>
                <div class="stat-value" id="totalNotes">0</div>
                <div class="stat-label">Catatan</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon shopping">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-value" id="shoppingList">0</div>
                <div class="stat-label">Daftar Belanja</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon warning">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stat-value" id="lowStock">0</div>
                <div class="stat-label">Stok Menipis</div>
            </div>
        </div>

        <!-- Profile Settings -->
        <div class="settings-section">
            <div class="section-header">
                <div class="section-icon profile">
                    <i class="fas fa-user-edit"></i>
                </div>
                <div>
                    <div class="section-title">Edit Profil</div>
                    <div class="section-description">Perbarui informasi profil Anda sesuai keinginan</div>
                </div>
            </div>

            <form id="profileForm">
                <div class="form-group">
                    <label class="form-label">Nama Lengkap</label>
                    <input type="text" id="profileName" class="form-control" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" id="profileEmail" class="form-control" required>
                </div>

                <div class="info-box">
                    <p><i class="fas fa-info-circle"></i> Email Anda digunakan untuk login dan notifikasi penting.</p>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Simpan Perubahan
                </button>
            </form>
        </div>

        <!-- Password Settings -->
        <div class="settings-section">
            <div class="section-header">
                <div class="section-icon password">
                    <i class="fas fa-lock"></i>
                </div>
                <div>
                    <div class="section-title">Ubah Password</div>
                    <div class="section-description">Ganti password akun Anda untuk keamanan</div>
                </div>
            </div>

            <form id="passwordForm">
                <div class="form-group">
                    <label class="form-label">Password Saat Ini</label>
                    <input type="password" id="currentPassword" class="form-control" required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Password Baru</label>
                        <input type="password" id="newPassword" class="form-control" required minlength="6">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Konfirmasi Password Baru</label>
                        <input type="password" id="confirmPassword" class="form-control" required minlength="6">
                    </div>
                </div>

                <div class="info-box">
                    <p><i class="fas fa-shield-alt"></i> Password minimal 6 karakter. Gunakan kombinasi huruf, angka, dan simbol untuk keamanan lebih.</p>
                </div>

                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-key"></i> Ubah Password
                </button>
            </form>
        </div>

        <!-- Danger Zone -->
        <div class="settings-section">
            <div class="section-header">
                <div class="section-icon danger">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <div class="section-title">Zona Bahaya</div>
                    <div class="section-description">Tindakan permanen dan tidak dapat dibatalkan</div>
                </div>
            </div>

            <div class="info-box danger">
                <p><i class="fas fa-triangle-exclamation"></i> <strong>Perhatian!</strong> Menghapus akun akan menghapus semua data Anda termasuk bahan dan catatan secara permanen.</p>
            </div>

            <button type="button" class="btn btn-danger btn-block" onclick="confirmDeleteAccount()">
                <i class="fas fa-trash-alt"></i> Hapus Akun Saya
            </button>
        </div>
    </div>

    <script>
        // Dark Mode
        const toggleBtn = document.querySelector('.dark-mode-toggle');
        const body = document.body;

        if (localStorage.getItem('theme') === 'dark' ||
            (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            body.classList.add('dark-mode-active');
            toggleBtn.innerHTML = '<i class="fas fa-sun"></i>';
        }

        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode-active');
            const isDark = body.classList.contains('dark-mode-active');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            toggleBtn.innerHTML = isDark ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
        });

        // Load User Info
        async function loadUserInfo() {
            try {
                const res = await fetch('/auth/status');
                const data = await res.json();
                if (data.authenticated) {
                    const userEl = document.getElementById('userName');
                    userEl.textContent = data.user.name;
                    userEl.style.display = 'block';
                    loadProfile(data.user.id);
                    loadUserStats(data.user.id);
                } else {
                    window.location.href = '/auth';
                }
            } catch(e) {
                window.location.href = '/auth';
            }
        }

        // Load User Stats
        async function loadUserStats(userId) {
            try {
                console.log('=== LOAD USER STATS ===');
                console.log('Loading stats for user ID:', userId);
                
                const res = await fetch('/api/dashboard/stats');
                console.log('Stats API response status:', res.status);
                
                const data = await res.json();
                console.log('Stats data:', data);

                if (data.success) {
                    // Update stats dengan data dari user yang login
                    document.getElementById('totalProducts').textContent = data.stats.totalProducts || 0;
                    document.getElementById('totalNotes').textContent = data.stats.totalNotes || 0;
                    document.getElementById('shoppingList').textContent = data.stats.shoppingList || 0;
                    document.getElementById('lowStock').textContent = data.stats.lowStock || 0;
                    
                    console.log('Stats loaded successfully!');
                    console.log('Total Products:', data.stats.totalProducts);
                    console.log('Total Notes:', data.stats.totalNotes);
                    console.log('Shopping List:', data.stats.shoppingList);
                    console.log('Low Stock:', data.stats.lowStock);
                } else {
                    console.error('Failed to load stats:', data.message);
                    // Set default values if failed
                    document.getElementById('totalProducts').textContent = '0';
                    document.getElementById('totalNotes').textContent = '0';
                    document.getElementById('shoppingList').textContent = '0';
                    document.getElementById('lowStock').textContent = '0';
                }
            } catch(e) {
                console.error('Error loading stats:', e);
                // Set default values if error
                document.getElementById('totalProducts').textContent = '0';
                document.getElementById('totalNotes').textContent = '0';
                document.getElementById('shoppingList').textContent = '0';
                document.getElementById('lowStock').textContent = '0';
            }
        }

        // Load Profile Data
        async function loadProfile(userId) {
            try {
                console.log('=== LOAD PROFILE ===');
                console.log('Loading profile for user ID:', userId);
                
                const res = await fetch('/api/profile/profile');
                console.log('Response status:', res.status);
                
                const data = await res.json();
                console.log('Profile data:', data);

                if (data.success) {
                    const user = data.user;
                    
                    // Set form values
                    document.getElementById('profileName').value = user.name;
                    document.getElementById('profileEmail').value = user.email;
                    
                    // Set display values
                    document.getElementById('profileNameDisplay').textContent = user.name;
                    document.getElementById('profileEmailDisplay').textContent = user.email;
                    
                    // Set profile photo
                    const avatarImg = document.getElementById('profileAvatarImg');
                    const avatarInitial = document.getElementById('profileAvatar');
                    
                    if (user.profile_photo) {
                        avatarImg.src = user.profile_photo;
                        avatarImg.style.display = 'block';
                        avatarInitial.style.display = 'none';
                    } else {
                        avatarImg.style.display = 'none';
                        avatarInitial.style.display = 'flex';
                        const initial = user.name.charAt(0).toUpperCase();
                        avatarInitial.textContent = initial;
                    }
                    
                    // Set member since
                    const memberSince = new Date(user.created_at).toLocaleDateString('id-ID', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });
                    document.getElementById('memberSince').textContent = memberSince;
                    
                    console.log('Profile loaded successfully!');
                } else {
                    console.error('Failed to load profile:', data.message);
                }
            } catch(e) {
                console.error('Error loading profile:', e);
            }
        }

        // Update Profile
        document.getElementById('profileForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = document.getElementById('profileName').value;
            const email = document.getElementById('profileEmail').value;

            try {
                const res = await fetch('/api/profile/profile', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, email })
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Profil Diperbarui',
                        text: 'Profil Anda berhasil diperbarui.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2E86DE'
                    });

                    // Update display values
                    document.getElementById('profileNameDisplay').textContent = name;
                    document.getElementById('userName').textContent = name;
                    
                    // Update avatar initial
                    const initial = name.charAt(0).toUpperCase();
                    document.getElementById('profileAvatar').textContent = initial;
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat memperbarui profil.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        });

        // Update Password
        document.getElementById('passwordForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal',
                    text: 'Password baru dan konfirmasi password tidak cocok.',
                    confirmButtonText: 'OK'
                });
                return;
            }

            try {
                const res = await fetch('/api/profile/password', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newPassword, confirmPassword })
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Password Diubah',
                        text: 'Password Anda berhasil diubah.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#FF9F43'
                    });

                    // Clear password fields
                    document.getElementById('currentPassword').value = '';
                    document.getElementById('newPassword').value = '';
                    document.getElementById('confirmPassword').value = '';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat mengubah password.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        });

        // Delete Account Confirmation
        async function confirmDeleteAccount() {
            const result = await Swal.fire({
                title: 'Hapus Akun?',
                html: `
                    <div style="text-align: left;">
                        <p style="color: var(--danger); font-weight: 600; margin-bottom: 15px;">
                            ‚ö†Ô∏è Peringatan: Tindakan ini tidak dapat dibatalkan!
                        </p>
                        <p>Semua data berikut akan dihapus permanen:</p>
                        <ul style="margin: 10px 0;">
                            <li>Semua bahan dapur Anda</li>
                            <li>Semua catatan Anda</li>
                            <li>Data akun Anda</li>
                        </ul>
                        <p style="margin-top: 15px;">Masukkan password Anda untuk melanjutkan:</p>
                    </div>
                `,
                input: 'password',
                inputPlaceholder: 'Password Anda',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#FF6B6B',
                cancelButtonColor: '#2E86DE',
                confirmButtonText: 'Ya, Hapus Akun',
                cancelButtonText: 'Batal',
                inputValidator: (value) => {
                    if (!value) {
                        return 'Password harus diisi!';
                    }
                }
            });

            if (result.isConfirmed) {
                deleteAccount(result.value);
            }
        }

        // Delete Account
        async function deleteAccount(password) {
            try {
                const res = await fetch('/api/profile/account', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password })
                });

                const data = await res.json();

                if (data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Akun Dihapus',
                        text: 'Akun Anda telah dihapus. Selamat tinggal!',
                        confirmButtonText: 'OK',
                        timer: 2000
                    });

                    window.location.href = data.redirect || '/';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Password salah.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', loadUserInfo);

        // Preview profile photo before upload
        function previewProfilePhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profileAvatarImg').src = e.target.result;
                    document.getElementById('profileAvatarImg').style.display = 'block';
                    document.getElementById('profileAvatar').style.display = 'none';
                    
                    // Show confirmation dialog
                    Swal.fire({
                        title: 'Upload Foto Profil?',
                        text: 'Apakah Anda ingin menyimpan foto ini sebagai foto profil?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#2E86DE',
                        cancelButtonColor: '#636E72',
                        confirmButtonText: 'Ya, Upload',
                        cancelButtonText: 'Batal'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            uploadProfilePhoto(file);
                        } else {
                            // Reset to previous state
                            loadProfilePhoto();
                        }
                    });
                };
                reader.readAsDataURL(file);
            }
        }

        // Upload profile photo
        async function uploadProfilePhoto(file) {
            try {
                const formData = new FormData();
                formData.append('profile_photo', file);

                const res = await fetch('/api/profile/photo', {
                    method: 'POST',
                    body: formData
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Foto Profil Diperbarui',
                        text: 'Foto profil Anda berhasil diubah.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2E86DE'
                    });
                    
                    // Reload profile to show new photo
                    loadUserInfo();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: data.message || 'Terjadi kesalahan saat upload foto.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch(e) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Gagal terhubung ke server.',
                    confirmButtonText: 'OK'
                });
            }
        }

        // Load profile photo
        function loadProfilePhoto() {
            const currentPhoto = document.getElementById('profileAvatarImg').src;
            if (currentPhoto && currentPhoto !== window.location.href) {
                document.getElementById('profileAvatarImg').style.display = 'block';
                document.getElementById('profileAvatar').style.display = 'none';
            } else {
                document.getElementById('profileAvatarImg').style.display = 'none';
                document.getElementById('profileAvatar').style.display = 'flex';
            }
        }
    </script>

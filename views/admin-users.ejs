        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('active');
            deleteUserTargetId = null;
        }

        async function confirmDelete() {
            if (!deleteUserTargetId) return;

            const isPermanent = document.getElementById('permanentDelete').checked;

            try {
                showLoading(true);
                const response = await fetch(`/api/users/${deleteUserTargetId}${isPermanent ? '/permanent' : ''}`, {
                    method: 'DELETE',
                    credentials: 'same-origin'
                });

                const result = await response.json();

                if (result.success) {
                    showToast('User berhasil dihapus', 'success');
                    closeDeleteModal();
                    loadUsers();
                    loadUserStatistics();
                } else {
                    showToast(result.message || 'Gagal menghapus user', 'error');
                }
            } catch (error) {
                console.error('Error deleting user:', error);
                showToast('Terjadi kesalahan', 'error');
            } finally {
                showLoading(false);
            }

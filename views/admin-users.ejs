        // ============================================
        // DELETE USER
        // ============================================
        function confirmDeleteUser(userId) {
            // Get user info for better message
            const userRow = document.querySelector(`button[onclick="confirmDeleteUser(${userId})"]`);
            const row = userRow?.closest('tr');
            const userName = row?.querySelector('.profile-img-sm')?.alt || 'User ini';
            
            deleteUserTargetId = userId;
            
            // Show custom confirmation modal with user name
            const modal = document.getElementById('deleteModal');
            const title = modal.querySelector('.modal-title');
            const message = modal.querySelector('.modal-body p');
            
            title.innerHTML = `<i class="fas fa-exclamation-triangle" style="color: var(--accent-red);"></i> Konfirmasi Hapus`;

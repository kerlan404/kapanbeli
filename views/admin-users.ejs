        // TOGGLE STATUS
        // ============================================
        async function toggleUserStatus(userId) {
            // Get user info for better message
            const userRow = document.querySelector(`button[onclick="toggleUserStatus(${userId})"]`);
            const row = userRow?.closest('tr');
            const userName = row?.querySelector('.profile-img-sm')?.alt || 'User ini';
            
            const isCurrentlyActive = userRow?.classList.contains('btn-warning');
            const newStatus = isCurrentlyActive ? 'nonaktifkan' : 'aktifkan';
            
            // Show custom confirmation
            if (!await showCustomConfirm(`Apakah Anda yakin ingin ${newStatus}kan ${userName}?`, 
                isCurrentlyActive ? 'warning' : 'success')) {
                return;
            }

            try {
                showLoading(true);
                const response = await fetch(`/api/users/${userId}/toggle-status`, {
                    method: 'PATCH',
                    credentials: 'same-origin'
                });

                const result = await response.json();

                if (result.success) {
                    showToast(`User berhasil di${newStatus}kan`, 'success');
                    loadUsers();
                    loadUserStatistics();
                } else {
                    showToast(result.message || `Gagal ${newStatus}kan user`, 'error');
                }
            } catch (error) {
                console.error('Error toggling status:', error);
                showToast('Terjadi kesalahan saat mengubah status user', 'error');
            } finally {
                showLoading(false);
            }

    <script>
        // ============================================
        // GLOBAL VARIABLES
        // ============================================
        let currentPage = 1;
        let currentLimit = 20;
        let deleteUserTargetId = null;
        let searchTimer = null;

        // ============================================
        // INIT
        // ============================================
        document.addEventListener('DOMContentLoaded', () => {
            initTheme();
            loadUsers();
            loadUserStatistics();
        });

        // ============================================
        // THEME
        // ============================================
        function initTheme() {
            if (localStorage.getItem('theme') === 'dark' ||
               (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.body.classList.add('dark-mode-active');
            }
        }

        function toggleTheme() {
            document.body.classList.toggle('dark-mode-active');
            localStorage.setItem('theme', document.body.classList.contains('dark-mode-active') ? 'dark' : 'light');
        }

        // ============================================
        // SIDEBAR
        // ============================================
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
        }

        // ============================================
        // LOAD USERS
        // ============================================
        async function loadUsers() {
            const search = document.getElementById('searchInput').value;
            const status = document.getElementById('statusFilter').value;
            const role = document.getElementById('roleFilter').value;

            const params = new URLSearchParams({
                page: currentPage,
                limit: currentLimit,
                ...(search && { search }),
                ...(status && { status }),
                ...(role && { role })
            });

            console.log('Loading users with params:', Object.fromEntries(params));
            showTableLoading(true);

            try {
                const response = await fetch(`/api/users?${params}`, {
                    credentials: 'same-origin' // Important: send session cookie
                });
                
                // Check if unauthorized
                if (response.status === 401) {
                    const errorData = await response.json();
                    throw new Error(errorData.message || 'Authentication required');
                }
                
                const result = await response.json();
                
                console.log('API Response:', result);

                if (result.success) {
                    renderUsersTable(result.data);
                    renderPagination(result.pagination);
                    updatePaginationInfo(result.pagination);
                } else {
                    console.error('API returned success: false', result);
                    showToast('Gagal memuat data: ' + result.message, 'error');
                }
            } catch (error) {
                console.error('Error loading users:', error);
                
                // Handle authentication error
                if (error.message.includes('Authentication') || error.message.includes('Unauthorized')) {
                    showToast('Session expired. Silakan login ulang.', 'error');
                    setTimeout(() => {
                        window.location.href = '/auth';
                    }, 2000);
                    return;
                }
                
                showToast('Terjadi kesalahan saat memuat data: ' + error.message, 'error');
            } finally {
                showTableLoading(false);
            }
        }

        // ============================================
        // RENDER USERS TABLE
        // ============================================
        function renderUsersTable(users) {
            const tbody = document.getElementById('usersTableBody');
            const emptyState = document.getElementById('emptyState');
            const paginationContainer = document.getElementById('paginationContainer');

            if (!users || users.length === 0) {
                tbody.innerHTML = '';
                emptyState.style.display = 'block';
                paginationContainer.style.display = 'none';
                return;
            }

            emptyState.style.display = 'none';
            paginationContainer.style.display = 'flex';

            tbody.innerHTML = users.map(user => {
                const profileImg = user.profile_image || `https://ui-avatars.com/api/?name=${encodeURIComponent(user.name)}&background=2E86DE&color=fff`;
                const statusBadge = getStatusBadge(user.account_status);
                const roleBadge = user.role === 'admin' ? 'badge-admin' : 'badge-user';
                const lastLogin = user.last_login ? new Date(user.last_login).toLocaleString('id-ID') : '<span style="color: var(--text-muted);">Belum pernah</span>';

                return `
                    <tr>
                        <td>
                            <div style="display: flex; align-items: center; gap: 12px;">
                                <img src="${profileImg}" alt="${user.name}" class="profile-img-sm">
                                <div>
                                    <div style="font-weight: 600;">${user.name}</div>
                                    <a href="/profile/${user.id}" target="_blank" style="font-size: 0.75rem; color: var(--primary-blue); text-decoration: none;">
                                        <i class="fas fa-external-link-alt"></i> Lihat Profil
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td>${user.email}</td>
                        <td><span class="badge ${roleBadge}">${user.role}</span></td>
                        <td>${statusBadge}</td>
                        <td style="text-align: center;">${user.total_logins || 0}</td>
                        <td>${new Date(user.created_at).toLocaleDateString('id-ID')}</td>
                        <td>
                            <div style="display: flex; gap: 5px; flex-wrap: wrap;">
                                <a href="/admin/user/${user.id}" class="btn btn-sm btn-primary" title="Lihat Detail Profil">
                                    <i class="fas fa-user-circle"></i> Detail
                                </a>
                                <button class="btn btn-sm btn-outline" onclick="openEditModal(${user.id})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm ${user.account_status === 'active' ? 'btn-warning' : 'btn-success'}" 
                                    onclick="toggleUserStatus(${user.id})" 
                                    title="${user.account_status === 'active' ? 'Nonaktifkan' : 'Aktifkan'}">
                                    <i class="fas fa-${user.account_status === 'active' ? 'pause' : 'play'}"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="confirmDeleteUser(${user.id})" title="Hapus">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        function getStatusBadge(status) {
            const badges = {
                'active': '<span class="badge badge-success">Aktif</span>',
                'inactive': '<span class="badge badge-secondary">Non-Aktif</span>',
                'suspended': '<span class="badge badge-danger">Suspended</span>'
            };
            return badges[status] || badges['inactive'];
        }

        // ============================================
        // PAGINATION
        // ============================================
        function renderPagination(pagination) {
            const { page, totalPages, hasNext, hasPrev } = pagination;
            const container = document.getElementById('paginationButtons');

            let buttons = '';

            // Previous
            buttons += `<button ${!hasPrev ? 'disabled' : ''} onclick="goToPage(${page - 1})">
                <i class="fas fa-chevron-left"></i>
            </button>`;

            // Page numbers
            const maxVisible = 5;
            let startPage = Math.max(1, page - Math.floor(maxVisible / 2));
            let endPage = Math.min(totalPages, startPage + maxVisible - 1);

            if (endPage - startPage + 1 < maxVisible) {
                startPage = Math.max(1, endPage - maxVisible + 1);
            }

            for (let i = startPage; i <= endPage; i++) {
                buttons += `<button class="${i === page ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
            }

            // Next
            buttons += `<button ${!hasNext ? 'disabled' : ''} onclick="goToPage(${page + 1})">
                <i class="fas fa-chevron-right"></i>
            </button>`;

            container.innerHTML = buttons;
        }

        function updatePaginationInfo(pagination) {
            const { page, limit, total } = pagination;
            const from = (page - 1) * limit + 1;
            const to = Math.min(page * limit, total);

            document.getElementById('showingFrom').textContent = total > 0 ? from : 0;
            document.getElementById('showingTo').textContent = to;
            document.getElementById('totalItems').textContent = total;
        }

        function goToPage(page) {
            currentPage = page;
            loadUsers();
        }

        // ============================================
        // SEARCH
        // ============================================
        function debounceSearch() {
            if (searchTimer) clearTimeout(searchTimer);
            searchTimer = setTimeout(() => {
                currentPage = 1;
                loadUsers();
            }, 500);
        }

        // ============================================
        // STATISTICS
        // ============================================
        async function loadUserStatistics() {
            try {
                const response = await fetch('/api/users/statistics', {
                    credentials: 'same-origin'
                });
                const result = await response.json();

                if (result.success) {
                    const stats = result.data;
                    document.getElementById('statTotalUsers').textContent = stats.total_users || 0;
                    document.getElementById('statActiveUsers').textContent = stats.active_users || 0;
                    document.getElementById('statInactiveUsers').textContent = stats.inactive_users || 0;
                    document.getElementById('statAdminUsers').textContent = stats.admin_users || 0;
                }
            } catch (error) {
                console.error('Error loading statistics:', error);
            }
        }

        // ============================================
        // MODAL FUNCTIONS
        // ============================================
        function openCreateModal() {
            document.getElementById('modalTitle').textContent = 'Tambah User Baru';
            document.getElementById('userForm').reset();
            document.getElementById('editUserId').value = '';
            document.getElementById('passwordGroup').style.display = 'block';
            document.getElementById('userModal').classList.add('active');
        }

        async function openEditModal(userId) {
            try {
                showLoading(true);
                const response = await fetch(`/api/users/${userId}`, {
                    credentials: 'same-origin'
                });
                const result = await response.json();

                if (result.success) {
                    const user = result.data;
                    document.getElementById('modalTitle').textContent = 'Edit User';
                    document.getElementById('editUserId').value = user.id;
                    document.getElementById('userName').value = user.name;
                    document.getElementById('userEmail').value = user.email;
                    document.getElementById('userRole').value = user.role;
                    document.getElementById('userStatus').value = user.account_status;
                    document.getElementById('passwordGroup').style.display = 'none';
                    document.getElementById('userModal').classList.add('active');
                } else {
                    showToast('Gagal memuat data user', 'error');
                }
            } catch (error) {
                console.error('Error loading user:', error);
                showToast('Terjadi kesalahan', 'error');
            } finally {
                showLoading(false);
            }
        }

        function closeModal() {
            document.getElementById('userModal').classList.remove('active');
            document.getElementById('userForm').reset();
        }

        // ============================================
        // FORM SUBMIT
        // ============================================
        async function handleFormSubmit(event) {
            if (event) event.preventDefault();

            const userId = document.getElementById('editUserId').value;
            const name = document.getElementById('userName').value.trim();
            const email = document.getElementById('userEmail').value.trim();
            const password = document.getElementById('userPassword').value;
            const role = document.getElementById('userRole').value;
            const status = document.getElementById('userStatus').value;

            // Validation
            if (!name || name.length < 3) {
                showToast('Nama minimal 3 karakter', 'error');
                return;
            }

            if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                showToast('Email tidak valid', 'error');
                return;
            }

            if (!userId && password.length < 6) {
                showToast('Password minimal 6 karakter', 'error');
                return;
            }

            try {
                showLoading(true);

                const body = { name, email, role, account_status: status };
                if (!userId) body.password = password;

                const url = userId ? `/api/users/${userId}` : '/api/users';
                const method = userId ? 'PUT' : 'POST';

                const response = await fetch(url, {
                    method,
                    credentials: 'same-origin',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(body)
                });

                const result = await response.json();

                if (result.success) {
                    showToast(userId ? 'User berhasil diupdate' : 'User berhasil dibuat', 'success');
                    closeModal();
                    loadUsers();
                    loadUserStatistics();
                } else {
                    showToast(result.message || 'Gagal menyimpan user', 'error');
                }
            } catch (error) {
                console.error('Error saving user:', error);
                showToast('Terjadi kesalahan', 'error');
            } finally {
                showLoading(false);
            }
        }


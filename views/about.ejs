        .notebook-card {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-card);
            padding: 3rem;
            position: relative;
            overflow: hidden;
            border-left: 4px solid var(--primary-orange);
        }

        .notebook-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: repeating-linear-gradient(

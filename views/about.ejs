        .notebook-content {
            position: relative;
            z-index: 1;
        }

        .notebook-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .notebook-title i {
            color: var(--primary-orange);
        }

        .notebook-text {
            font-size: 1.05rem;
            color: var(--text-muted);
            line-height: 2;
            margin-bottom: 1.5rem;
        }


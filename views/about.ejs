            background: linear-gradient(135deg, rgba(255, 159, 67, 0.15), rgba(46, 134, 222, 0.1));
            padding: 1.5rem 2rem;
            border-radius: 16px;
            margin: 2rem 0;
            border-left: 3px solid var(--primary-orange);
        }

        .notebook-highlight p {
            margin: 0;
            font-weight: 500;
            color: var(--text-main);
        }


<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil User - Kapan Beli</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary-blue: #2E86DE;
            --primary-orange: #FF9F43;
            --accent-green: #1DD1A1;
            --bg-body: #F4F6F9;
            --bg-card: #FFFFFF;
            --text-main: #2C3E50;
            --text-muted: #8395A7;
            --border-color: #e9ecef;
            --shadow: 0 4px 20px rgba(0,0,0,0.08);
        }

        body.dark-mode-active {
            --bg-body: #121418;
            --bg-card: #1e2128;
            --text-main: #ecf0f1;
            --text-muted: #bdc3c7;
            --border-color: #2c3e50;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Poppins', sans-serif; }

        body {
            background: var(--bg-body);
            color: var(--text-main);
            min-height: 100vh;
            padding: 20px;
        }

        .container { max-width: 1000px; margin: 0 auto; }

        /* Header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .page-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-main);
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

        .btn-primary { background: var(--primary-blue); color: white; }
        .btn-primary:hover { background: #1a73c9; }
        .btn-outline { background: transparent; border: 1px solid var(--border-color); color: var(--text-main); }
        .btn-outline:hover { border-color: var(--primary-blue); color: var(--primary-blue); }

        /* Profile Card */
        .profile-card {
            background: var(--bg-card);
            border-radius: 16px;
            padding: 30px;
            box-shadow: var(--shadow);
            margin-bottom: 30px;
        }

        .profile-header {
            display: flex;
            gap: 30px;
            align-items: center;
            flex-wrap: wrap;
        }

        .profile-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid var(--primary-blue);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .profile-info { flex: 1; min-width: 250px; }
        .profile-name { font-size: 2rem; font-weight: 700; margin-bottom: 5px; color: var(--text-main); }
        .profile-email { font-size: 1rem; color: var(--text-muted); margin-bottom: 15px; }
        
        .profile-badges { display: flex; gap: 10px; flex-wrap: wrap; margin-bottom: 15px; }
        .badge {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        .badge-admin { background: rgba(162, 155, 254, 0.15); color: #A29BFE; }
        .badge-user { background: rgba(46, 134, 222, 0.15); color: var(--primary-blue); }
        .badge-active { background: rgba(29, 209, 161, 0.15); color: var(--accent-green); }
        .badge-inactive { background: rgba(149, 165, 166, 0.15); color: var(--text-muted); }

        .profile-meta {
            font-size: 0.9rem;
            color: var(--text-muted);
        }
        .profile-meta p { margin-bottom: 8px; display: flex; align-items: center; gap: 8px; }
        .profile-meta i { width: 20px; color: var(--primary-blue); }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            margin-top: 25px;
        }

        .stat-card {
            background: var(--bg-body);
            padding: 20px;
            border-radius: 12px;
            text-align: center;
            transition: transform 0.2s;
        }
        .stat-card:hover { transform: translateY(-3px); }
        .stat-value { font-size: 2rem; font-weight: 700; color: var(--primary-blue); margin-bottom: 5px; }
        .stat-label { font-size: 0.85rem; color: var(--text-muted); }

        /* Data Sections */
        .data-section {
            background: var(--bg-card);
            border-radius: 16px;
            padding: 25px;
            box-shadow: var(--shadow);
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--text-main);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .section-title i { color: var(--primary-blue); }

        .table-responsive { overflow-x: auto; }
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; padding: 12px; color: var(--text-muted); font-weight: 600; font-size: 0.85rem; border-bottom: 2px solid var(--border-color); }
        td { padding: 12px; border-bottom: 1px solid var(--border-color); color: var(--text-main); font-size: 0.95rem; }
        tr:hover td { background-color: rgba(0,0,0,0.02); }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-muted);
        }
        .empty-state i { font-size: 3rem; margin-bottom: 15px; opacity: 0.5; }

        /* Loading */
        .loading {
            text-align: center;
            padding: 80px 20px;
        }
        .loading i { font-size: 3rem; color: var(--primary-blue); animation: spin 1s linear infinite; }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* Error */
        .error-state {
            text-align: center;
            padding: 80px 20px;
        }
        .error-state i { font-size: 3rem; color: var(--accent-red); margin-bottom: 15px; }

        @media (max-width: 768px) {
            .profile-header { flex-direction: column; text-align: center; }
            .profile-badges { justify-content: center; }
            .profile-meta p { justify-content: center; }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-user-circle"></i>
                Profil Pengguna
            </h1>
            <button class="btn btn-outline" onclick="window.history.back()">
                <i class="fas fa-arrow-left"></i> Kembali
            </button>
        </div>

        <!-- Loading -->
        <div id="loading" class="loading">
            <i class="fas fa-circle-notch fa-spin"></i>
            <p style="margin-top: 15px;">Memuat data profil...</p>
        </div>

        <!-- Error -->
        <div id="error" class="error-state" style="display: none;">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>Oops! Data tidak ditemukan</h3>
            <p style="margin-top: 10px;">Profil user yang Anda cari tidak tersedia.</p>
            <button class="btn btn-primary" onclick="window.history.back()" style="margin: 20px auto; display: inline-flex;">
                <i class="fas fa-arrow-left"></i> Kembali
            </button>
        </div>

        <!-- Profile Content -->
        <div id="profileContent" style="display: none;">
            <!-- Profile Card -->
            <div class="profile-card">
                <div class="profile-header">
                    <img id="profileImage" src="" alt="Profile" class="profile-avatar">
                    <div class="profile-info">
                        <h2 id="profileName" class="profile-name">-</h2>
                        <p id="profileEmail" class="profile-email">-</p>
                        <div id="profileBadges" class="profile-badges"></div>
                        <div class="profile-meta">
                            <p><i class="fas fa-calendar"></i> Bergabung: <span id="joinDate">-</span></p>
                            <p><i class="fas fa-sign-in-alt"></i> Login terakhir: <span id="lastLogin">-</span></p>
                        </div>
                    </div>
                </div>

                <!-- Stats -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div id="statProducts" class="stat-value">0</div>
                        <div class="stat-label">Produk</div>
                    </div>
                    <div class="stat-card">
                        <div id="statSuggestions" class="stat-value">0</div>
                        <div class="stat-label">Saran</div>
                    </div>
                    <div class="stat-card">
                        <div id="statNotes" class="stat-value">0</div>
                        <div class="stat-label">Catatan</div>
                    </div>
                    <div class="stat-card">
                        <div id="statLogins" class="stat-value">0</div>
                        <div class="stat-label">Total Login</div>
                    </div>
                </div>
            </div>

            <!-- Products Section -->
            <div id="productsSection" class="data-section" style="display: none;">
                <h3 class="section-title">
                    <i class="fas fa-box"></i>
                    Produk (<span id="productsCount">0</span>)
                </h3>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Nama Produk</th>
                                <th>Stok</th>
                                <th>Min. Stok</th>
                                <th>Dibuat</th>
                            </tr>
                        </thead>
                        <tbody id="productsTable"></tbody>
                    </table>
                </div>
            </div>

            <!-- Suggestions Section -->
            <div id="suggestionsSection" class="data-section" style="display: none;">
                <h3 class="section-title">
                    <i class="fas fa-clipboard-list"></i>
                    Saran Pembelian (<span id="suggestionsCount">0</span>)
                </h3>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>Tipe</th>
                                <th>Deskripsi</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="suggestionsTable"></tbody>
                    </table>
                </div>
            </div>

            <!-- Notes Section -->
            <div id="notesSection" class="data-section" style="display: none;">
                <h3 class="section-title">
                    <i class="fas fa-sticky-note"></i>
                    Catatan (<span id="notesCount">0</span>)
                </h3>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Judul</th>
                                <th>Isi</th>
                                <th>Dibuat</th>
                            </tr>
                        </thead>
                        <tbody id="notesTable"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Get user ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const userId = urlParams.get('id');

        // Load profile data
        async function loadProfile() {
            if (!userId) {
                showError();
                return;
            }

            try {
                const response = await fetch(`/api/users/${userId}/data`);
                const result = await response.json();

                if (!result.success || !result.data.user) {
                    showError();
                    return;
                }

                displayProfile(result.data);
            } catch (error) {
                console.error('Error loading profile:', error);
                showError();
            }
        }

        // Display profile
        function displayProfile(data) {
            const { user, products, suggestions, notes } = data;

            // Profile Image
            const profileImg = document.getElementById('profileImage');
            profileImg.src = user.profile_image || `https://ui-avatars.com/api/?name=${encodeURIComponent(user.name)}&background=2E86DE&color=fff&size=150`;

            // Profile Info
            document.getElementById('profileName').textContent = user.name;
            document.getElementById('profileEmail').textContent = user.email;

            // Badges
            const badgesContainer = document.getElementById('profileBadges');
            badgesContainer.innerHTML = `
                <span class="badge ${user.role === 'admin' ? 'badge-admin' : 'badge-user'}">
                    <i class="fas fa-${user.role === 'admin' ? 'crown' : 'user'}"></i>
                    ${user.role}
                </span>
                <span class="badge ${user.account_status === 'active' ? 'badge-active' : 'badge-inactive'}">
                    <i class="fas fa-${user.account_status === 'active' ? 'check-circle' : 'times-circle'}"></i>
                    ${user.account_status === 'active' ? 'Aktif' : 'Non-Aktif'}
                </span>
            `;

            // Meta Info
            document.getElementById('joinDate').textContent = new Date(user.created_at).toLocaleDateString('id-ID', {
                year: 'numeric', month: 'long', day: 'numeric'
            });
            document.getElementById('lastLogin').textContent = user.last_login 
                ? new Date(user.last_login).toLocaleString('id-ID')
                : 'Belum pernah';

            // Stats
            document.getElementById('statProducts').textContent = user.total_products || 0;
            document.getElementById('statSuggestions').textContent = user.total_suggestions || 0;
            document.getElementById('statNotes').textContent = user.total_notes || 0;
            document.getElementById('statLogins').textContent = user.total_logins || 0;

            // Products
            if (products && products.length > 0) {
                document.getElementById('productsSection').style.display = 'block';
                document.getElementById('productsCount').textContent = products.length;
                document.getElementById('productsTable').innerHTML = products.slice(0, 10).map(p => `
                    <tr>
                        <td><strong>${p.name}</strong></td>
                        <td>${p.stock_quantity} ${p.unit || ''}</td>
                        <td>${p.min_stock_level || 0} ${p.unit || ''}</td>
                        <td>${new Date(p.created_at).toLocaleDateString('id-ID')}</td>
                    </tr>
                `).join('');
            }

            // Suggestions
            if (suggestions && suggestions.length > 0) {
                document.getElementById('suggestionsSection').style.display = 'block';
                document.getElementById('suggestionsCount').textContent = suggestions.length;
                document.getElementById('suggestionsTable').innerHTML = suggestions.slice(0, 10).map(s => `
                    <tr>
                        <td><strong>${s.name}</strong></td>
                        <td>${s.type}</td>
                        <td>${s.description || '-'}</td>
                        <td><span class="badge badge-${s.status === 'pending' ? 'warning' : 'success'}">${s.status}</span></td>
                    </tr>
                `).join('');
            }

            // Notes
            if (notes && notes.length > 0) {
                document.getElementById('notesSection').style.display = 'block';
                document.getElementById('notesCount').textContent = notes.length;
                document.getElementById('notesTable').innerHTML = notes.slice(0, 10).map(n => `
                    <tr>
                        <td><strong>${n.title}</strong></td>
                        <td>${n.content ? n.content.substring(0, 50) + (n.content.length > 50 ? '...' : '') : '-'}</td>
                        <td>${new Date(n.created_at).toLocaleDateString('id-ID')}</td>
                    </tr>
                `).join('');
            }

            // Show content
            document.getElementById('loading').style.display = 'none';
            document.getElementById('profileContent').style.display = 'block';
        }

        // Show error
        function showError() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('error').style.display = 'block';
        }

        // Load on page load
        loadProfile();
    </script>
</body>
</html>

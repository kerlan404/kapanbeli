<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catatan Belanja - Kapan Beli</title>

    <!-- Google Fonts: Poppins & Handlee (Handwriting) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Handlee&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìù</text></svg>" type="image/x-icon">

    <style>
        /* --- CSS VARIABLES (DARI KODE ANDA) --- */
        :root {
            --primary-blue: #2E86DE;
            --primary-orange: #FF9F43;
            --bg-body: #F0F4F8;
            --bg-card: #FFFFFF;
            --text-main: #2C3E50;
            --text-muted: #636E72;
            --border-radius: 16px;
            --shadow-sm: 0 4px 6px rgba(0,0,0,0.05);
            --shadow-md: 0 10px 25px rgba(46, 134, 222, 0.15);
            --danger: #FF6B6B;
            --success: #1DD1A1;
            --warning: #FECA57;
            --border-light: #eee;
        }

        body.dark-mode-active {
            --bg-body: #1E272E;
            --bg-card: #2C3E50;
            --text-main: #DFE6E9;
            --text-muted: #B2BEC3;
            --shadow-sm: 0 4px 6px rgba(0,0,0,0.3);
            --shadow-md: 0 10px 25px rgba(0,0,0,0.4);
            --border-light: #444;
        }

        * { box-sizing: border-box; margin: 0; padding: 0; transition: background 0.3s, color 0.3s, box-shadow 0.3s; }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-body);
            /* Pola Dot Grid halus seperti buku tulis */
            background-image: radial-gradient(var(--text-muted) 1px, transparent 1px);
            background-size: 24px 24px;
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- NAVBAR --- */
        nav {
            position: sticky;
            top: 0;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            box-shadow: var(--shadow-sm);
            z-index: 100;
            padding: 12px 5%;
        }
        body.dark-mode-active nav { background: rgba(30, 39, 46, 0.95); border-bottom: 1px solid rgba(255,255,255,0.05); }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-main);
            text-decoration: none;
            /* Font Tulisan Tangan untuk Logo */
            font-family: 'Handlee', cursive;
        }
        .logo i { color: var(--primary-orange); }
        .nav-menu { display: flex; gap: 25px; }
        .nav-link { 
            text-decoration: none; 
            color: var(--text-muted); 
            font-weight: 500; 
            transition: 0.3s; 
            position: relative;
            padding: 5px 0;
        }
        .nav-link:hover, .nav-link.active { color: var(--primary-blue); }
        .nav-link::after {
            content: ''; position: absolute; width: 0; height: 2px; bottom: 0; left: 0;
            background-color: var(--primary-orange); transition: width 0.3s ease; border-radius: 2px;
        }
        .nav-link:hover::after, .nav-link.active::after { width: 100%; }
        .nav-buttons { display: flex; align-items: center; gap: 20px; }
        .dark-mode-toggle {
            background: transparent; border: none; color: var(--text-main); font-size: 1.2rem; cursor: pointer;
        }

        /* --- MAIN CONTAINER --- */
        .container { 
            max-width: 1000px; 
            margin: 30px auto; 
            padding: 0 20px; 
            width: 100%; 
            flex: 1; 
        }

        /* Header Section */
        .page-header {
            margin-bottom: 30px;
            text-align: center;
        }
        .page-title { 
            font-size: 2.2rem; 
            color: var(--text-main); 
            font-weight: 700; 
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            /* Font Tulisan Tangan */
            font-family: 'Handlee', cursive;
        }

        /* Stats Pills (Sticky Notes Style) */
        .stats-row {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }
        .stat-pill {
            background: var(--bg-card);
            padding: 12px 24px;
            border-radius: 50px;
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            border: 1px solid var(--border-light);
            position: relative;
        }
        /* Efek Selotip (Tape) di pinggir stat */
        .stat-pill::before {
            content: ''; position: absolute; top: -8px; left: 50%; transform: translateX(-50%) rotate(-2deg);
            width: 40px; height: 16px; background: rgba(255,255,255,0.4);
            backdrop-filter: blur(2px);
        }
        
        .stat-pill i { font-size: 1.2rem; }
        .stat-pill.red { color: var(--danger); border-bottom: 3px solid var(--danger); }
        .stat-pill.yellow { color: var(--warning); border-bottom: 3px solid var(--warning); }
        .stat-pill.green { color: var(--success); border-bottom: 3px solid var(--success); }

        /* --- SEARCH BAR --- */
        .search-container {
            position: relative;
            margin-bottom: 30px;
        }
        .search-input {
            width: 100%;
            padding: 18px 25px 18px 55px;
            border-radius: 50px;
            border: 2px solid transparent;
            background: var(--bg-card);
            font-family: inherit;
            font-size: 1rem;
            color: var(--text-main);
            box-shadow: var(--shadow-md);
            outline: none;
        }
        .search-input:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 4px rgba(46, 134, 222, 0.1);
        }
        .search-icon {
            position: absolute;
            left: 22px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-orange);
            font-size: 1.1rem;
        }

        /* --- LIST CONTAINER (NOTEBOOK CARDS) --- */
        .list-wrapper {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        /* List Group Header */
        .list-group-header {
            font-family: 'Handlee', cursive;
            font-size: 1.4rem;
            color: var(--text-main);
            margin: 20px 0 10px 0;
            display: flex;
            align-items: center;
            gap: 10px;
            opacity: 0.8;
        }
        .list-group-header::before {
            content: ''; display: block; width: 6px; height: 24px; background: var(--primary-blue); border-radius: 3px;
        }

        /* Note Card Style */
        .note-card {
            background: var(--bg-card);
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            padding: 0;
            border: 1px solid var(--border-light);
            position: relative;
            overflow: hidden;
            transition: all 0.2s ease;
        }
        .note-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        /* Garis warna di kiri kartu (Highlighter) */
        .note-card.type-low { border-left: 6px solid var(--danger); }
        .note-card.type-exp { border-left: 6px solid var(--warning); }

        .item-checkbox {
            width: 28px;
            height: 28px;
            border: 2px solid var(--text-muted);
            border-radius: 6px;
            margin: 0 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            transition: all 0.2s;
        }
        .item-checkbox:hover { border-color: var(--primary-blue); background: rgba(46, 134, 222, 0.05); }

        .item-icon {
            width: 55px;
            height: 55px;
            border-radius: 12px;
            background: rgba(0,0,0,0.03);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
            font-size: 1.5rem;
            color: var(--primary-orange);
            flex-shrink: 0;
        }
        
        .item-details { flex: 1; min-width: 0; padding: 18px 0; }
        .item-name { 
            font-weight: 600; 
            font-size: 1.1rem; 
            color: var(--text-main); 
            margin-bottom: 6px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .item-meta {
            display: flex;
            gap: 15px;
            font-size: 0.85rem;
            color: var(--text-muted);
            flex-wrap: wrap;
        }
        .badge {
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .badge-low { background: rgba(255, 107, 107, 0.15); color: var(--danger); }
        .badge-exp { background: rgba(254, 202, 87, 0.15); color: #d35400; }

        .item-action {
            margin-left: 20px;
            padding: 0 20px;
        }
        .btn-buy {
            background: var(--primary-blue);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: transform 0.2s, box-shadow 0.2s;
            white-space: nowrap;
        }
        .btn-buy:hover { 
            background: #2575c9; 
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(46, 134, 222, 0.3);
        }

        /* Empty State */
        .empty-state {
            text-align: center; 
            padding: 80px 20px; 
            color: var(--text-muted);
            background: var(--bg-card);
            border-radius: 12px;
            border: 2px dashed var(--border-light);
        }
        .empty-state i { 
            font-size: 4rem; 
            margin-bottom: 20px; 
            opacity: 0.3; 
        }

        /* Responsive */
        @media (max-width: 600px) {
            .note-card { flex-direction: column; align-items: flex-start; padding: 15px; }
            .item-checkbox { display: none; }
            .item-icon { width: 40px; height: 40px; font-size: 1.2rem; margin-right: 15px; }
            .item-details { width: 100%; padding: 0 0 15px 0; }
            .item-action { width: 100%; padding: 0; }
            .btn-buy { width: 100%; justify-content: center; }
            .stats-row { flex-direction: column; }
            .stat-pill { width: 100%; justify-content: center; }
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav>
        <div class="nav-container">
            <a href="/" class="logo">
                <i class="fas fa-shopping-bag"></i>
                <span>Kapan Beli</span>
            </a>
            <div class="nav-menu">
                <a href="/" class="nav-link">Beranda</a>
                <a href="/notes" class="nav-link">Catatan</a>
                <a href="/products" class="nav-link">Bahan</a>
                <a href="/suggestions" class="nav-link active">Saran</a>
            </div>
            <div class="nav-buttons">
                <button class="dark-mode-toggle" title="Toggle Dark Mode"><i class="fas fa-moon"></i></button>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <h1 class="page-title"><i class="fas fa-clipboard-list" style="color: var(--primary-blue);"></i> Catatan Belanja</h1>
            
            <!-- Stats (Red/Yellow/Green from your code) -->
            <div class="stats-row">
                <div class="stat-pill red">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span><span id="lowStockCount">0</span> Stok Rendah</span>
                </div>
                <div class="stat-pill yellow">
                    <i class="fas fa-clock"></i>
                    <span><span id="expiringSoonCount">0</span> Kadaluarsa</span>
                </div>
                <div class="stat-pill green">
                    <i class="fas fa-check-circle"></i>
                    <span><span id="totalSuggestionsCount">0</span> Total Item</span>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" placeholder="Cari item belanjaan (contoh: bawang, telur)...">
        </div>

        <!-- List Container -->
        <div id="listContainer" class="list-wrapper">
            <div id="loadingSpinner" style="text-align: center; padding: 60px;">
                <i class="fas fa-pen-nib fa-spin" style="font-size: 3rem; color: var(--primary-orange); margin-bottom: 20px;"></i>
                <p style="color: var(--text-muted);">Menulis catatan...</p>
            </div>
        </div>
    </div>

    <script>
        // --- 1. DARK MODE LOGIC ---
        const toggleBtn = document.querySelector('.dark-mode-toggle');
        const body = document.body;

        if (localStorage.getItem('theme') === 'dark' ||
           (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            enableDarkMode();
        }

        toggleBtn.addEventListener('click', () => {
            body.classList.contains('dark-mode-active') ? disableDarkMode() : enableDarkMode();
        });

        function enableDarkMode() {
            body.classList.add('dark-mode-active');
            localStorage.setItem('theme', 'dark');
        }
        function disableDarkMode() {
            body.classList.remove('dark-mode-active');
            localStorage.setItem('theme', 'light');
        }

        // --- 2. DATA MANAGEMENT ---
        let allSuggestions = []; // Store all items globally for filtering

        // Helper: Get Icon
        function getIcon(name) {
            const n = name.toLowerCase();
            if(n.includes('ayam')) return 'fa-drumstick-bite';
            if(n.includes('susu')) return 'fa-glass-whiskey';
            if(n.includes('telur')) return 'fa-egg';
            if(n.includes('bawang')) return 'fa-seedling';
            if(n.includes('beras')) return 'fa-wheat';
            if(n.includes('cabai')) return 'fa-pepper-hot';
            if(n.includes('minyak')) return 'fa-bottle-droplet';
            return 'fa-box-open';
        }

        // Helper: Format Date
        function formatDate(dateStr) {
            if(!dateStr) return '-';
            const d = new Date(dateStr);
            return `${d.getDate().toString().padStart(2, '0')}/${(d.getMonth()+1).toString().padStart(2, '0')}/${d.getFullYear()}`;
        }

        async function loadSuggestions() {
            try {
                const response = await fetch('/api/products');
                const data = await response.json();
                
                if (data.success) {
                    processProducts(data.products);
                } else {
                    showErrorState();
                }
            } catch (error) {
                console.error(error);
                showErrorState();
            }
        }

        function processProducts(products) {
            // 1. Categorize
            const lowStock = products.filter(p => p.stock_quantity <= p.min_stock_level && p.stock_quantity > 0);
            const expiring = products.filter(p => {
                if (!p.expiry_date) return false;
                const diffDays = Math.ceil((new Date(p.expiry_date) - new Date()) / (1000 * 60 * 60 * 24));
                return diffDays >= 0 && diffDays <= 7;
            });

            // 2. Update Stats
            document.getElementById('lowStockCount').textContent = lowStock.length;
            document.getElementById('expiringSoonCount').textContent = expiring.length;
            document.getElementById('totalSuggestionsCount').textContent = lowStock.length + expiring.length;

            // 3. Create Unified List Object
            allSuggestions = [
                ...lowStock.map(p => ({ ...p, category: 'Stok Rendah', type: 'low-stock', color: 'red' })),
                ...expiring.map(p => ({ ...p, category: 'Hampir Kadaluarsa', type: 'expiring', color: 'yellow' }))
            ];

            // 4. Sort by Category then Name
            allSuggestions.sort((a, b) => {
                if (a.type === b.type) return a.name.localeCompare(b.name);
                return a.type.localeCompare(b.type);
            });

            renderList(allSuggestions);
        }

        // --- 3. RENDER LIST (CATATAN STYLE) ---
        function renderList(items) {
            const container = document.getElementById('listContainer');
            container.innerHTML = '';

            if (items.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-check-circle" style="color: var(--success); opacity: 0.2; font-size: 5rem;"></i>
                        <h3>Catatan Kosong</h3>
                        <p>Stok dapur Anda aman dan terjaga!</p>
                    </div>
                `;
                return;
            }

            let currentCategory = '';

            items.forEach(item => {
                // Add Header if category changes
                if (item.category !== currentCategory) {
                    const header = document.createElement('div');
                    header.className = 'list-group-header';
                    header.innerHTML = `<i class="fas ${item.type === 'low-stock' ? 'fa-exclamation-triangle' : 'fa-clock'}"></i> ${item.category}`;
                    container.appendChild(header);
                    currentCategory = item.category;
                }

                const row = document.createElement('div');
                // Tambahkan class type-low (Merah) atau type-exp (Kuning) untuk border kiri
                row.className = `note-card type-${item.type === 'low-stock' ? 'low' : 'exp'}`;
                
                // Badge Logic (Menggunakan warna dari prompt: danger/warning)
                let badgeHTML = '';
                if(item.type === 'low-stock') {
                    badgeHTML = `<span class="badge badge-low">Sisa: ${item.stock_quantity} ${item.unit || ''}</span>`;
                } else {
                    const diffDays = Math.ceil((new Date(item.expiry_date) - new Date()) / (1000 * 60 * 60 * 24));
                    badgeHTML = `<span class="badge badge-exp">Sisa: ${diffDays} hari</span>`;
                }

                row.innerHTML = `
                    <div class="item-checkbox" onclick="approveSuggestion(${item.id}, '${item.name.replace(/'/g, "\\'")}', '${item.type}')">
                        <i class="fas fa-check" style="color:var(--primary-blue); font-size:0.8rem; opacity:0;"></i>
                    </div>
                    <div class="item-icon">
                        ${item.image_url 
                            ? `<img src="${item.image_url}" style="width:100%; height:100%; object-fit:cover; border-radius:12px;">` 
                            : `<i class="fas ${getIcon(item.name)}"></i>`
                        }
                    </div>
                    <div class="item-details">
                        <div class="item-name" onclick="viewProductDetail(${item.id})" style="cursor:pointer;">${item.name}</div>
                        <div class="item-meta">
                            <span><i class="far fa-calendar"></i> ${formatDate(item.expiry_date)}</span>
                            ${badgeHTML}
                        </div>
                    </div>
                    <div class="item-action">
                        <button class="btn-buy" onclick="approveSuggestion(${item.id}, '${item.name.replace(/'/g, "\\'")}', '${item.type}')">
                            <i class="fas fa-shopping-basket"></i> Beli
                        </button>
                    </div>
                `;
                container.appendChild(row);
            });
        }

        function showErrorState() {
            document.getElementById('listContainer').innerHTML = `
                <div class="empty-state" style="border-color: var(--danger);">
                    <i class="fas fa-exclamation-circle" style="color: var(--danger);"></i>
                    <h3>Gagal Memuat</h3>
                    <p>Tidak dapat mengambil data saran pembelian.</p>
                </div>
            `;
        }

        // --- 4. SEARCH LOGIC ---
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const filtered = allSuggestions.filter(item => 
                item.name.toLowerCase().includes(query)
            );
            renderList(filtered);
        });

        // --- 5. ACTIONS (LOGIC UTAMA) ---
        function viewProductDetail(id) {
            window.location.href = `/products/detail/${id}`;
        }

        async function approveSuggestion(productId, productName, type) {
            // Gunakan SweetAlert untuk input data pembelian/penggunaan
            const result = await Swal.fire({
                title: type === 'low-stock' ? 'Catat Pembelian' : 'Tandai Digunakan',
                html: `
                    <div style="text-align:left; margin-bottom:15px; font-family: 'Poppins', sans-serif;">
                        <p style="font-size:1.2rem; font-weight:600; margin-bottom:5px; color:var(--text-main);">${productName}</p>
                        <p style="font-size:0.9rem; color:var(--text-muted);">
                            ${type === 'low-stock' 
                                ? 'Masukkan jumlah stok baru dan tanggal kadaluarsa.' 
                                : 'Anda yakin ingin menandai bahan ini sudah digunakan/habis?'}
                        </p>
                    </div>
                    ${type === 'low-stock' ? `
                    <div style="margin-bottom:10px;">
                        <label style="display:block; font-size:0.85rem; margin-bottom:5px; color:var(--text-muted);">Jumlah Stok Baru</label>
                        <input id="swal-input1" class="swal2-input" placeholder="Contoh: 5" type="number" min="1" style="width:100%;">
                    </div>
                    <div>
                        <label style="display:block; font-size:0.85rem; margin-bottom:5px; color:var(--text-muted);">Tanggal Kadaluarsa</label>
                        <input id="swal-input2" class="swal2-input" type="date" style="width:100%;">
                    </div>
                    ` : ''}
                `,
                focusConfirm: false,
                preConfirm: () => {
                    if (type === 'low-stock') {
                        const stock = document.getElementById('swal-input1').value;
                        const date = document.getElementById('swal-input2').value;
                        if (!stock || parseFloat(stock) <= 0) {
                            Swal.showValidationMessage('Mohon masukkan jumlah stok yang valid');
                            return false;
                        }
                        return [stock, date];
                    }
                    return true;
                },
                showCancelButton: true,
                confirmButtonText: type === 'low-stock' ? 'Simpan Stok' : 'Ya, Habis',
                confirmButtonColor: type === 'low-stock' ? 'var(--primary-blue)' : 'var(--danger)',
                cancelButtonText: 'Batal'
            });

            if (result.isConfirmed) {
                try {
                    let updatedData = {};
                    
                    if (type === 'low-stock') {
                        const [newStock, newExpiry] = result.value;
                        updatedData = {
                            stock_quantity: parseFloat(newStock),
                            expiry_date: newExpiry || null
                        };
                    } else {
                        // Expiring item marked as used
                        updatedData = { stock_quantity: 0 };
                    }

                    const response = await fetch(`/api/products/${productId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(updatedData)
                    });

                    const data = await response.json();

                    if (data.success) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });

                        Toast.fire({
                            icon: 'success',
                            title: type === 'low-stock' ? 'Stok Diperbarui!' : 'Bahan Ditandai Habis'
                        });

                        // Reload data to refresh list
                        loadSuggestions();
                    } else {
                        Swal.fire('Gagal', data.message, 'error');
                    }
                } catch (error) {

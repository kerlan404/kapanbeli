<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saran Pembelian - Kapan Beli</title>

    <!-- Google Fonts: Poppins & Handlee (Handwriting) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Handlee&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Animations CSS -->
    <link rel="stylesheet" href="/css/animations.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìù</text></svg>" type="image/x-icon">

    <style>
        /* --- CSS VARIABLES --- */
        :root {
            --primary-blue: #2E86DE;
            --primary-orange: #FF9F43;
            --accent-purple: #5f27cd;
            
            /* Light Mode (Default) */
            --bg-body: #F7F9FC;
            --bg-card: #FFFFFF;
            --bg-input: #F8F9FA;
            --text-main: #2C3E50;
            --text-muted: #8395A7;
            --border-color: #E1E8ED;
            --border-radius: 16px;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
            --shadow-md: 0 8px 24px rgba(149, 157, 165, 0.12);
            --shadow-lg: 0 12px 40px rgba(149, 157, 165, 0.18);
            --danger: #FF6B6B;
            --success: #1DD1A1;
            --warning: #FECA57;
            --glass-bg: rgba(255, 255, 255, 0.95);
            --nav-bg: rgba(255, 255, 255, 0.9);
            
            /* Variabel Buku Tulis */
            --line-color: rgba(46, 134, 222, 0.08);
            --margin-color: rgba(255, 107, 107, 0.2);
            --line-height: 2rem;
            
            /* Dot pattern */
            --dot-color: #E1E8ED;
        }

        body.dark-mode-active {
            --bg-body: #1E272E;
            --bg-card: #2C3E50;
            --bg-input: #34495E;
            --text-main: #DFE6E9;
            --text-muted: #808E9B;
            --border-color: #3D5166;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.3);
            --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
            --shadow-lg: 0 12px 40px rgba(0, 0, 0, 0.5);
            --glass-bg: rgba(30, 39, 46, 0.95);
            --nav-bg: rgba(30, 39, 46, 0.9);
            --line-color: rgba(255, 255, 255, 0.05);
            --margin-color: rgba(255, 107, 107, 0.3);
            --dot-color: #3D5166;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            transition: background 0.3s, color 0.3s, box-shadow 0.3s, border-color 0.3s;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-body);
            background-image: radial-gradient(var(--dot-color) 1.5px, transparent 1.5px);
            background-size: 24px 24px;
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- NAVBAR (CONSISTENT WITH WEBSITE) --- */
        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            padding: 0;
        }

        body.dark-mode-active .navbar {
            background: rgba(30, 39, 46, 0.9);
            border-bottom-color: rgba(255, 255, 255, 0.05);
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
        }

        .navbar.scrolled {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 70px;
        }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 700;
            font-size: 1.4rem;
            color: var(--text-main);
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 12px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .nav-brand:hover {
            background: rgba(255, 159, 67, 0.08);
            transform: translateX(-2px);
        }

        .nav-brand i {
            color: var(--primary-orange);
            font-size: 1.6rem;
            filter: drop-shadow(0 2px 4px rgba(255, 159, 67, 0.3));
        }

        .nav-menu {
            display: flex;
            gap: 4px;
            align-items: center;
            background: rgba(0, 0, 0, 0.02);
            padding: 6px;
            border-radius: 14px;
        }

        body.dark-mode-active .nav-menu {
            background: rgba(255, 255, 255, 0.03);
        }

        .nav-link {
            text-decoration: none;
            color: var(--text-muted);
            font-weight: 500;
            font-size: 0.92rem;
            padding: 10px 18px;
            border-radius: 10px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            white-space: nowrap;
        }

        .nav-link:hover {
            color: var(--text-main);
            background: rgba(46, 134, 222, 0.08);
        }

        .nav-link.active {
            color: white;
            background: linear-gradient(135deg, var(--primary-orange), var(--primary-blue));
            box-shadow: 0 4px 12px rgba(255, 159, 67, 0.3);
        }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .dark-mode-toggle {
            background: rgba(46, 134, 222, 0.1);
            border: none;
            color: var(--primary-blue);
            font-size: 1.1rem;
            cursor: pointer;
            width: 42px;
            height: 42px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            flex-shrink: 0;
        }

        .dark-mode-toggle:hover {
            background: rgba(46, 134, 222, 0.2);
            transform: rotate(20deg);
        }

        body.dark-mode-active .dark-mode-toggle {
            background: rgba(255, 159, 67, 0.15);
            color: var(--primary-orange);
        }

        body.dark-mode-active .dark-mode-toggle:hover {
            background: rgba(255, 159, 67, 0.25);
        }

        .profile-photo {
            width: 32px; height: 32px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-orange);
            cursor: pointer;
            transition: transform 0.2s;
        }
        .profile-photo:hover { transform: scale(1.1); }

        /* --- MAIN CONTENT --- */
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
            width: 100%;
            flex: 1;
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
            gap: 20px;
            background: var(--bg-card);
            padding: 24px 30px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-md);
            border-left: 5px solid var(--primary-orange);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .header-section:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-lg);
        }

        .page-title {
            font-size: 1.8rem;
            color: var(--text-main);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 15px;
            font-family: 'Handlee', cursive;
        }

        .page-title i {
            color: var(--primary-orange);
            filter: drop-shadow(0 2px 4px rgba(255, 159, 67, 0.3));
        }

        /* Stats Pills */
        .stats-row {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .stat-pill {
            background: linear-gradient(135deg, var(--bg-card), rgba(255, 255, 255, 0.5));
            padding: 12px 24px;
            border-radius: 50px;
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            border: 1px solid rgba(0,0,0,0.08);
            position: relative;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body.dark-mode-active .stat-pill {
            background: linear-gradient(135deg, var(--bg-card), rgba(255, 255, 255, 0.05));
        }

        .stat-pill:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-md);
        }

        .stat-pill::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.2) 50%, transparent 70%);
            transform: translateX(-100%);
            transition: transform 0.6s ease;
        }

        .stat-pill:hover::before {
            transform: translateX(100%);
        }

        .stat-pill i { font-size: 1.1rem; }
        .stat-pill.red { color: var(--danger); border-bottom: 3px solid var(--danger); background: linear-gradient(135deg, rgba(255, 107, 107, 0.1), transparent); }
        .stat-pill.yellow { color: var(--warning); border-bottom: 3px solid var(--warning); background: linear-gradient(135deg, rgba(254, 202, 87, 0.1), transparent); }
        .stat-pill.green { color: var(--success); border-bottom: 3px solid var(--success); background: linear-gradient(135deg, rgba(29, 209, 161, 0.1), transparent); }

        /* Search & Filter Bar - IMPROVED UI/UX */
        .search-wrapper {
            position: relative;
            margin-bottom: 40px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
            background: var(--bg-card);
            padding: 20px 25px;
            border-radius: 16px;
            box-shadow: var(--shadow-md);
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            align-items: center;
        }

        .search-input {
            flex: 1;
            min-width: 250px;
            padding: 16px 25px 16px 50px;
            border-radius: 12px;
            border: 2px solid rgba(0,0,0,0.08);
            background: var(--bg-body);
            font-family: inherit;
            font-size: 1rem;
            color: var(--text-main);
            transition: all 0.3s;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary-blue);
            background: var(--bg-card);
            box-shadow: 0 0 0 4px rgba(46, 134, 222, 0.1);
        }

        .search-icon {
            position: absolute;
            left: 45px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-orange);
            font-size: 1.1rem;
            pointer-events: none;
        }
        
        /* Filter Section */
        .filter-wrapper {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            align-items: center;
        }
        
        .filter-label {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .filter-label i {
            color: var(--primary-blue);
        }

        .filter-select {
            padding: 14px 20px;
            border-radius: 12px;
            border: 2px solid rgba(0,0,0,0.08);
            background: var(--bg-body);
            color: var(--text-main);
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            outline: none;
            transition: all 0.3s;
            min-width: 180px;
        }
        
        .filter-select:hover {
            border-color: var(--primary-blue);
            background: var(--bg-card);
        }

        .filter-select:focus {
            border-color: var(--primary-orange);
            background: var(--bg-card);
            box-shadow: 0 0 0 4px rgba(255, 159, 67, 0.15);
        }
        
        /* Results Badge */
        .results-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 18px;
            background: rgba(29, 209, 161, 0.1);
            color: var(--success);
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
        }
        
        .results-badge i {
            font-size: 0.85rem;
        }

        /* --- SUGGESTIONS LIST (NOTEBOOK STYLE) --- */
        .suggestions-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding-bottom: 80px;
        }

        /* List Group Header */
        .list-group-header {
            font-family: 'Handlee', cursive;
            font-size: 1.4rem;
            color: var(--text-main);
            margin: 20px 0 10px 0;
            display: flex;
            align-items: center;
            gap: 10px;
            opacity: 0.8;
        }

        .list-group-header::before {
            content: ''; display: block; width: 6px; height: 24px; background: var(--primary-blue); border-radius: 3px;
        }

        /* Suggestion Card - Modern Enhanced Style */
        .suggestion-card {
            background: var(--bg-card);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-md);
            display: flex;
            align-items: center;
            padding: 0;
            position: relative;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            min-height: 100px;
            overflow: hidden;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        body.dark-mode-active .suggestion-card {
            border-color: rgba(255, 255, 255, 0.05);
        }

        .suggestion-card::before {
            content: '';
            position: absolute;
            left: 40px;
            top: 20px;
            bottom: 20px;
            width: 2px;
            background-color: var(--margin-color);
            z-index: 1;
        }

        /* Garis warna di kiri kartu berdasarkan tipe */
        .suggestion-card.type-low-stock { 
            border-left: 6px solid var(--danger);
            background: linear-gradient(90deg, rgba(255, 107, 107, 0.05), transparent);
        }
        .suggestion-card.type-expiring { 
            border-left: 6px solid var(--warning);
            background: linear-gradient(90deg, rgba(254, 202, 87, 0.05), transparent);
        }

        .suggestion-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            z-index: 5;
        }

        /* Pita Perekat (Tape) - Enhanced */
        .tape {
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%) rotate(-2deg);
            width: 100px;
            height: 30px;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.3));
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            backdrop-filter: blur(4px);
            z-index: 10;
            border-radius: 4px;
            border-left: 2px dashed rgba(0,0,0,0.05);
            border-right: 2px dashed rgba(0,0,0,0.05);
        }

        body.dark-mode-active .tape {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
        }

        .item-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            background: rgba(0,0,0,0.03);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px 0 20px 60px;
            font-size: 1.8rem;
            color: var(--primary-orange);
            flex-shrink: 0;
            z-index: 2;
        }

        .item-details { 
            flex: 1; 
            min-width: 0; 
            padding: 20px 20px 20px 25px;
            z-index: 2;
        }

        .item-name {
            font-weight: 600;
            font-size: 1.2rem;
            color: var(--text-main);
            margin-bottom: 8px;
            cursor: pointer;
            line-height: var(--line-height);
        }

        .item-name:hover { color: var(--primary-blue); text-decoration: underline; text-decoration-color: var(--primary-orange); }

        .item-meta {
            display: flex;
            gap: 15px;
            font-size: 0.85rem;
            color: var(--text-muted);
            flex-wrap: wrap;
            line-height: var(--line-height);
        }

        .badge {
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-low { background: rgba(255, 107, 107, 0.15); color: var(--danger); }
        .badge-exp { background: rgba(254, 202, 87, 0.15); color: #d35400; }

        .item-action {
            padding: 0 25px 0 20px;
            z-index: 2;
        }

        .btn-approve {
            background: var(--primary-blue);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: transform 0.2s, box-shadow 0.2s;
            white-space: nowrap;
            box-shadow: 0 4px 10px rgba(46, 134, 222, 0.3);
        }

        .btn-approve:hover {
            background: #2575c9;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(46, 134, 222, 0.4);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: var(--bg-card);
            border-radius: 16px;
            border: 2px dashed var(--primary-blue);
            box-shadow: var(--shadow-sm);
        }

        .empty-state i {
            font-size: 5rem;
            margin-bottom: 25px;
            color: var(--primary-orange);
        }

        .empty-state h3 {
            color: var(--text-main);
            margin-bottom: 10px;
        }

        .empty-state p {
            color: var(--text-muted);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-menu { display: none; }
            .header-section { flex-direction: column; align-items: stretch; text-align: center; }
            .stats-row { justify-content: center; }
            .suggestion-card { flex-direction: column; align-items: flex-start; padding: 15px; }
            .item-icon { margin: 15px; }
            .item-details { width: 100%; padding: 0 0 15px 0; }
            .item-action { width: 100%; padding: 0 0 15px 0; }
            .btn-approve { width: 100%; justify-content: center; }
        }
    </style>
</head>
<body>

    <!-- NAVBAR (CONSISTENT WITH WEBSITE) -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-brand">
                <i class="fas fa-shopping-bag"></i>
                <span>Kapan Beli</span>
            </a>
            <div class="nav-menu">
                <a href="/" class="nav-link">Beranda</a>
                <a href="/notes" class="nav-link">Catatan</a>
                <a href="/products" class="nav-link">Bahan</a>
                <a href="/suggestions" class="nav-link active">Saran</a>
            </div>
            <div class="nav-actions">
                <a href="/user-profile" id="profilePhotoLink" style="display:none;">
                    <img id="navProfilePhoto" src="" alt="Profile" class="profile-photo" />
                </a>
                <a href="/user-profile" id="profileLink" class="nav-link" title="Profil" style="font-size: 0.9rem; display:none;">
                    <i class="fas fa-user-circle"></i>
                </a>
                <button class="dark-mode-toggle" title="Toggle Dark Mode">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Header -->
        <div class="header-section animate-on-scroll">
            <div class="page-title">
                <i class="fas fa-clipboard-list" style="color: var(--primary-orange);"></i>
                Saran Pembelian
            </div>
            <div class="stats-row">
                <div class="stat-pill red animate-on-scroll delay-1">
                    <i class="fas fa-trash-alt"></i>
                    <span><span id="expiredCount">0</span> Kadaluarsa</span>
                </div>
                <div class="stat-pill red animate-on-scroll delay-2">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span><span id="outOfStockCount">0</span> Habis</span>
                </div>
                <div class="stat-pill yellow animate-on-scroll delay-3">
                    <i class="fas fa-exclamation-circle"></i>
                    <span><span id="lowStockCount">0</span> Stok Rendah</span>
                </div>
                <div class="stat-pill orange animate-on-scroll delay-4">
                    <i class="fas fa-clock"></i>
                    <span><span id="expiringCount">0</span> Hampir Kadaluarsa</span>
                </div>
            </div>
        </div>

        <!-- Search & Filter -->
        <div class="search-wrapper animate-on-scroll delay-1">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" placeholder="Cari item belanjaan (contoh: bawang, telur)...">
            
            <div class="filter-wrapper">
                <span class="filter-label">
                    <i class="fas fa-filter"></i> Filter:
                </span>
                <select id="suggestionFilter" class="filter-select">
                    <option value="">Semua Kondisi</option>
                    <option value="expired">Kadaluarsa</option>
                    <option value="low-stock">Stok Rendah</option>
                    <option value="expiring">Hampir Kadaluarsa</option>
                </select>
            </div>
            
            <span class="results-badge" id="resultsBadge" style="display: none;">
                <i class="fas fa-check-circle"></i> <span id="resultsCount">0</span> Saran
            </span>
        </div>

        <!-- List Container -->
        <div id="suggestionsList" class="suggestions-list">
            <div id="loadingSpinner" style="text-align: center; padding: 60px;">
                <i class="fas fa-circle-notch fa-spin" style="font-size: 3rem; color: var(--primary-orange); margin-bottom: 20px;"></i>
                <p style="color: var(--text-muted); font-weight: 500;">Membaca catatan belanja...</p>
            </div>
        </div>
    </div>

    <script>
        // --- 0. AUTH CHECK & USER INFO ---
        async function loadUserInfo() {
            try {
                const res = await fetch('/auth/status', {
                    method: 'GET',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const data = await res.json();
                if (!data.authenticated) {
                    window.location.href = '/auth';
                    return;
                }

                // Show profile photo if exists
                const profilePhotoLink = document.getElementById('profilePhotoLink');
                const profileLink = document.getElementById('profileLink');
                const navProfilePhoto = document.getElementById('navProfilePhoto');

                if (data.user.profile_photo) {
                    navProfilePhoto.src = data.user.profile_photo;
                    navProfilePhoto.style.display = 'inline-block';
                    profilePhotoLink.style.display = 'inline-block';
                    profileLink.style.display = 'none';
                } else {
                    profilePhotoLink.style.display = 'none';
                    profileLink.style.display = 'inline-block';
                }
                
                // Store user info for later use
                window.currentUser = data.user;
            } catch(e) {
                console.error('Error loading user info:', e);
                window.location.href = '/auth';
            }
        }

        // --- 1. DARK MODE LOGIC ---
        console.log('Suggestions page loaded');

        const toggleBtn = document.querySelector('.dark-mode-toggle');
        const body = document.body;
        const themeIcon = toggleBtn.querySelector('i');

        if (localStorage.getItem('theme') === 'dark' ||
           (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            enableDarkMode();
        }

        toggleBtn.addEventListener('click', () => {
            body.classList.contains('dark-mode-active') ? disableDarkMode() : enableDarkMode();
        });

        function enableDarkMode() {
            body.classList.add('dark-mode-active');
            localStorage.setItem('theme', 'dark');
            if(themeIcon) {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
                themeIcon.style.color = '#F1C40F';
            }
        }

        function disableDarkMode() {
            body.classList.remove('dark-mode-active');
            localStorage.setItem('theme', 'light');
            if(themeIcon) {
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
                themeIcon.style.color = '';
            }
        }

        // --- 2. DATA MANAGEMENT ---
        let allSuggestions = [];

        // Helper: Get Icon
        function getIcon(name) {
            const n = name.toLowerCase();
            if(n.includes('ayam')) return 'fa-drumstick-bite';
            if(n.includes('susu')) return 'fa-glass-whiskey';
            if(n.includes('telur')) return 'fa-egg';
            if(n.includes('bawang')) return 'fa-seedling';
            if(n.includes('beras')) return 'fa-wheat';
            if(n.includes('cabai')) return 'fa-pepper-hot';
            if(n.includes('minyak')) return 'fa-bottle-droplet';
            return 'fa-box-open';
        }

        // Helper: Format Date - FIX timezone issue
        function formatDate(dateStr) {
            if(!dateStr) return '-';
            // Parse manual untuk menghindari masalah timezone
            const datePart = dateStr.split('T')[0];
            const parts = datePart.split('-');
            if (parts.length !== 3) return '-';
            const day = parseInt(parts[2], 10);
            const month = parseInt(parts[1], 10);
            const year = parseInt(parts[0], 10);
            return `${String(day).padStart(2, '0')}/${String(month).padStart(2, '0')}/${year}`;
        }

        async function loadSuggestions() {
            try {
                console.log('=== LOADING SUGGESTIONS ===');
                
                // Check auth status first
                const authRes = await fetch('/auth/status');
                const authData = await authRes.json();
                console.log('Auth status:', authData);
                
                if (!authData.authenticated) {
                    console.warn('User not authenticated, redirecting to login...');
                    window.location.href = '/auth';
                    return;
                }
                
                console.log('User ID:', authData.user.id);
                
                console.log('Loading suggestions from API...');
                const response = await fetch('/api/suggestions');
                console.log('Response status:', response.status);
                
                const data = await response.json();
                console.log('API Response:', data);

                if (data.success) {
                    console.log('Suggestions loaded:', data.suggestions.length);
                    console.log('Suggestions data:', data.suggestions);
                    console.log('Stats:', data.stats);
                    processSuggestions(data.suggestions, data.stats);
                } else {
                    console.error('API returned error:', data);
                    showErrorState();
                }
            } catch (error) {
                console.error('Error loading suggestions:', error);
                showErrorState();
            }
        }

        function processSuggestions(suggestions, stats) {
            console.log('Processing suggestions:', suggestions);
            console.log('Stats:', stats);

            // Update Stats
            document.getElementById('expiredCount').textContent = stats.expiredCount || 0;
            document.getElementById('outOfStockCount').textContent = stats.outOfStockCount || 0;
            document.getElementById('lowStockCount').textContent = stats.lowStockCount || 0;
            document.getElementById('expiringCount').textContent = stats.expiringCount || 0;

            // Store for filtering
            allSuggestions = suggestions;

            renderList(allSuggestions);
        }

        // --- 3. RENDER LIST (NOTEBOOK STYLE) ---
        function renderList(items) {
            const container = document.getElementById('suggestionsList');

            // Update results badge
            const resultsBadge = document.getElementById('resultsBadge');
            const resultsCount = document.getElementById('resultsCount');

            if (resultsBadge && resultsCount) {
                resultsCount.textContent = items.length;
                resultsBadge.style.display = items.length > 0 ? 'inline-flex' : 'none';
            }

            container.innerHTML = '';

            if (items.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-check-circle" style="color: var(--success); opacity: 0.3; font-size: 5rem;"></i>
                        <h3>Catatan Kosong</h3>
                        <p>Stok dapur Anda aman dan terjaga!</p>
                    </div>
                `;
                return;
            }

            console.log('Rendering', items.length, 'suggestions');
            let currentCategory = '';

            items.forEach(item => {
                // Add Header if category changes
                if (item.category !== currentCategory) {
                    const header = document.createElement('div');
                    header.className = 'list-group-header';
                    header.innerHTML = `<i class="fas ${item.alertIcon || 'fa-exclamation-circle'}"></i> ${item.category}`;
                    container.appendChild(header);
                    currentCategory = item.category;
                }

                const row = document.createElement('div');
                let cardClass = 'suggestion-card';
                if (item.type === 'expired') cardClass += ' type-expired';
                else if (item.type === 'low-stock') cardClass += ' type-low-stock';
                else if (item.type === 'expiring') cardClass += ' type-expiring';
                row.className = cardClass;

                // Badge Logic dengan Alert
                const badgeHTML = `
                    <span class="badge badge-alert">
                        <i class="fas ${item.alertIcon || 'fa-exclamation-circle'}"></i> ${item.alertText || 'PERINGATAN!'}
                    </span>
                    <span class="badge badge-stock">${item.badge || `${item.stock_quantity} ${item.unit || ''}`}</span>
                `;

                // Button text based on type
                const btnText = item.buttonText || 'Lihat';

                row.innerHTML = `
                    <div class="tape"></div>
                    <div class="item-icon">
                        ${item.image_url
                            ? `<img src="${item.image_url}" style="width:100%; height:100%; object-fit:cover; border-radius:12px;">`
                            : `<i class="fas ${getIcon(item.name)}"></i>`
                        }
                    </div>
                    <div class="item-details">
                        <div class="item-name" onclick="viewProductDetail(${item.id})">${item.name}</div>
                        <div class="item-meta">
                            <span><i class="far fa-calendar"></i> ${formatDate(item.expiry_date)}</span>
                            ${badgeHTML}
                        </div>
                    </div>
                    <div class="item-action">
                        <button class="btn-approve" onclick="viewProductDetail(${item.id})">
                            <i class="fas fa-shopping-basket"></i> ${btnText}
                        </button>
                    </div>
                `;
                container.appendChild(row);
            });

            console.log('Rendering complete');
        }

        function showErrorState() {
            document.getElementById('suggestionsList').innerHTML = `
                <div class="empty-state" style="border-color: var(--danger);">
                    <i class="fas fa-exclamation-circle" style="color: var(--danger);"></i>
                    <h3>Gagal Memuat</h3>
                    <p>Tidak dapat mengambil data saran pembelian.</p>
                </div>
            `;
        }

        // --- 4. SEARCH & FILTER LOGIC ---
        const suggestionFilter = document.getElementById('suggestionFilter');
        
        // Filter by type
        suggestionFilter.addEventListener('change', () => {
            const type = suggestionFilter.value;
            const query = document.getElementById('searchInput').value.toLowerCase();
            
            let filtered = allSuggestions;
            
            // Filter by type
            if (type) {
                filtered = filtered.filter(item => item.type === type);
            }
            
            // Filter by search
            if (query) {
                filtered = filtered.filter(item => item.name.toLowerCase().includes(query));
            }
            
            renderList(filtered);
        });
        
        // Search input
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const type = suggestionFilter.value;
            
            let filtered = allSuggestions;
            
            // Filter by type
            if (type) {
                filtered = filtered.filter(item => item.type === type);
            }
            
            // Filter by search
            if (query) {
                filtered = filtered.filter(item => item.name.toLowerCase().includes(query));
            }
            
            renderList(filtered);
        });

        // --- 5. ACTIONS ---
        function viewProductDetail(id) {
            window.location.href = `/products/detail/${id}`;
        }

        async function approveSuggestion(productId, productName, type) {
            const result = await Swal.fire({
                title: type === 'low-stock' ? 'Catat Pembelian' : 'Tandai Digunakan',
                html: `
                    <div style="text-align:left; margin-bottom:15px; font-family: 'Poppins', sans-serif;">
                        <p style="font-size:1.2rem; font-weight:600; margin-bottom:5px; color:var(--text-main);">${productName}</p>
                        <p style="font-size:0.9rem; color:var(--text-muted);">
                            ${type === 'low-stock'
                                ? 'Masukkan jumlah stok baru dan tanggal kadaluarsa.'
                                : 'Anda yakin ingin menandai bahan ini sudah digunakan/habis?'}
                        </p>
                    </div>
                    ${type === 'low-stock' ? `
                    <div style="margin-bottom:10px;">
                        <label style="display:block; font-size:0.85rem; margin-bottom:5px; color:var(--text-muted);">Jumlah Stok Baru</label>
                        <input id="swal-input1" class="swal2-input" placeholder="Contoh: 5" type="number" min="1" style="width:100%;">
                    </div>
                    <div>
                        <label style="display:block; font-size:0.85rem; margin-bottom:5px; color:var(--text-muted);">Tanggal Kadaluarsa</label>
                        <input id="swal-input2" class="swal2-input" type="date" style="width:100%;">
                    </div>
                    ` : ''}
                `,
                focusConfirm: false,
                preConfirm: () => {
                    if (type === 'low-stock') {
                        const stock = document.getElementById('swal-input1').value;
                        const date = document.getElementById('swal-input2').value;
                        if (!stock || parseFloat(stock) <= 0) {
                            Swal.showValidationMessage('Mohon masukkan jumlah stok yang valid');
                            return false;
                        }
                        return [stock, date];
                    }
                    return true;
                },
                showCancelButton: true,
                confirmButtonText: type === 'low-stock' ? 'Simpan Stok' : 'Ya, Habis',
                confirmButtonColor: type === 'low-stock' ? 'var(--primary-blue)' : 'var(--primary-orange)',
                cancelButtonColor: '#95a5a6',
                cancelButtonText: 'Batal'
            });

            if (result.isConfirmed) {
                try {
                    let updatedData = {};

                    if (type === 'low-stock') {
                        const [newStock, newExpiry] = result.value;
                        updatedData = {
                            stock_quantity: parseFloat(newStock),
                            expiry_date: newExpiry || null
                        };
                    } else {
                        updatedData = { stock_quantity: 0 };
                    }

                    const response = await fetch(`/api/products/${productId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(updatedData)
                    });

                    const data = await response.json();

                    if (data.success) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });

                        Toast.fire({
                            icon: 'success',
                            title: type === 'low-stock' ? 'Stok Diperbarui!' : 'Bahan Ditandai Habis'
                        });

                        loadSuggestions();
                    } else {
                        Swal.fire('Gagal', data.message, 'error');
                    }
                } catch (error) {
                    console.error(error);
                    Swal.fire('Error', 'Terjadi kesalahan koneksi.', 'error');
                }
            }
        }

        // --- INIT ---
        document.addEventListener('DOMContentLoaded', () => {
            loadUserInfo();
            loadSuggestions();
        });

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>

    <!-- Scroll Animations -->
    <script src="/js/animations.js" defer></script>

    <%- include('./partials/footer') %>
</body>
</html>

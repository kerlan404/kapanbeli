<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bahan Saya - Catatan Dapur</title>
    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìù</text></svg>" type="image/x-icon">
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* --- CSS VARIABLES & RESET --- */
        :root {
            /* Warna Asli (Tidak Diubah) */
            --primary-blue: #2E86DE;
            --primary-orange: #FF9F43;
            --bg-body: #E3E9EF; /* Sedikit lebih gelap agar kertas putih menonjol */
            --bg-card: #FFFFFF;
            --text-main: #2C3E50;
            --text-muted: #636E72;
            --border-radius: 4px; /* Sudut lebih tumpul seperti kertas */
            --shadow-sm: 0 2px 5px rgba(0,0,0,0.05);
            --shadow-md: 0 8px 20px rgba(0,0,0,0.12); /* Bayangan lebih tebal untuk efek 'menempel' */
            --danger: #FF6B6B;
            --success: #1DD1A1;
            --warning: #FECA57;
            
            /* Variabel Kertas Catatan */
            --paper-line-color: rgba(46, 134, 222, 0.1);
            --paper-margin-color: rgba(255, 159, 67, 0.2);
        }

        body.dark-mode-active {
            --bg-body: #1a2228;
            --bg-card: #2d3b45;
            --text-main: #ECF0F1;
            --text-muted: #B2BEC3;
            --shadow-sm: 0 4px 6px rgba(0,0,0,0.3);
            --shadow-md: 0 8px 20px rgba(0,0,0,0.5);
            
            /* Mode Gelap untuk Kertas */
            --paper-line-color: rgba(255, 255, 255, 0.05);
            --paper-margin-color: rgba(255, 159, 67, 0.1);
        }

        * { box-sizing: border-box; margin: 0; padding: 0; transition: background 0.3s, color 0.3s, border-color 0.3s; }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-body);
            background-image: radial-gradient(var(--text-muted) 1px, transparent 1px); /* Pola titik di background body */
            background-size: 30px 30px; /* Pola titik jarang */
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- NAVBAR --- */
        nav {
            background: var(--bg-card);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 15px 5%;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: var(--shadow-sm);
        }
        .nav-container {
            display: flex; justify-content: space-between; align-items: center; max-width: 1400px; margin: 0 auto;
        }
        .logo {
            font-weight: 700; font-size: 1.4rem; color: var(--text-main); text-decoration: none; display: flex; align-items: center; gap: 10px;
        }
        .nav-menu { display: flex; gap: 30px; }
        .nav-link { 
            text-decoration: none; color: var(--text-muted); font-weight: 500; font-size: 0.95rem;
            position: relative; padding: 5px 0;
        }
        .nav-link:hover, .nav-link.active { color: var(--primary-blue); }
        .nav-link::after {
            content: ''; position: absolute; width: 0; height: 2px; bottom: 0; left: 0;
            background-color: var(--primary-orange); transition: width 0.3s ease; border-radius: 2px;
        }
        .nav-link:hover::after, .nav-link.active::after { width: 100%; }
        .dark-mode-toggle {
            background: transparent; border: none; color: var(--text-main); font-size: 1.2rem; cursor: pointer; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center;
        }
        .dark-mode-toggle:hover { background: rgba(0,0,0,0.05); }

        /* --- MAIN CONTENT --- */
        .container { max-width: 1400px; margin: 40px auto; padding: 0 20px; width: 100%; flex: 1; }
        
        .header-section {
            display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;
            background: var(--bg-card);
            padding: 20px 30px;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            border-left: 5px solid var(--primary-orange);
        }
        .page-title { font-size: 1.5rem; color: var(--text-main); font-weight: 700; display: flex; align-items: center; gap: 10px; }
        
        .add-btn {
            background: var(--primary-blue); color: white; border: none; padding: 10px 25px; border-radius: 30px;
            font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 8px; text-decoration: none;
            box-shadow: 0 4px 10px rgba(46, 134, 222, 0.3);
        }
        .add-btn:hover { background: #2373c7; transform: translateY(-2px); }

        /* Search Bar */
        .search-wrapper { position: relative; margin-bottom: 30px; }
        .search-input {
            width: 100%; padding: 18px 25px; border-radius: 50px; border: 2px solid transparent;
            background: var(--bg-card); font-family: inherit; font-size: 1rem; color: var(--text-main);
            box-shadow: var(--shadow-sm);
        }
        .search-input:focus { outline: none; border-color: var(--primary-orange); }
        .search-icon { position: absolute; right: 25px; top: 50%; transform: translateY(-50%); color: var(--text-muted); }

        /* Grid & Cards - FIXED SIZE CONSISTENT LAYOUT */
        .products-grid {
            display: grid; 
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); 
            gap: 20px;
        }

        /* --- FIXED SIZE PRODUCT CARD --- */
        .product-card {
            background: var(--bg-card);
            border-radius: 16px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            position: relative;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(0,0,0,0.05);
            height: 420px; /* FIXED HEIGHT */
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
            border-color: rgba(46, 134, 222, 0.3);
        }

        /* Card Header - FIXED IMAGE CONTAINER */
        .card-header {
            position: relative;
            width: 100%;
            height: 200px; /* FIXED HEIGHT */
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            overflow: hidden;
            flex-shrink: 0; /* Don't shrink */
        }

        body.dark-mode-active .card-header {
            background: linear-gradient(135deg, #2d3b45 0%, #1a2228 100%);
        }

        .card-header img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* CROP to fill - no stretching */
            transition: transform 0.3s;
        }

        .product-card:hover .card-header img {
            transform: scale(1.08);
        }

        .card-header .card-icon {
            font-size: 4rem;
            color: var(--primary-orange);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        /* Category Badge */
        .category-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: rgba(255, 255, 255, 0.95);
            color: var(--primary-blue);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            backdrop-filter: blur(4px);
            z-index: 10;
        }

        body.dark-mode-active .category-badge {
            background: rgba(44, 62, 80, 0.95);
            color: var(--primary-blue);
        }

        /* Stock Status Indicator */
        .stock-indicator {
            position: absolute;
            top: 12px;
            left: 12px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            box-shadow: 0 0 0 3px rgba(255,255,255,0.8);
            z-index: 10;
        }

        body.dark-mode-active .stock-indicator {
            box-shadow: 0 0 0 3px rgba(44, 62, 80, 0.8);
        }

        .stock-indicator.normal { background: var(--success); }
        .stock-indicator.low { background: var(--warning); }
        .stock-indicator.empty { background: var(--danger); }

        /* Card Body - FLEXIBLE CONTENT */
        .card-body {
            padding: 15px 18px;
            flex: 1; /* Takes remaining space */
            display: flex;
            flex-direction: column;
            gap: 12px;
            overflow: hidden;
        }

        .prod-name {
            font-size: 1.1rem;
            font-weight: 700;
            margin: 0;
            color: var(--text-main);
            cursor: pointer;
            transition: color 0.2s;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2; /* Max 2 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            min-height: 32px; /* Fixed height for 2 lines */
        }

        .prod-name:hover {
            color: var(--primary-orange);
        }

        /* Info Section - FIXED LAYOUT */
        .info-section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 5px;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 14px;
            background: rgba(0,0,0,0.03);
            border-radius: 10px;
            transition: background 0.2s;
        }

        body.dark-mode-active .info-row {
            background: rgba(255,255,255,0.05);
        }

        .info-row:hover {
            background: rgba(0,0,0,0.06);
        }

        body.dark-mode-active .info-row:hover {
            background: rgba(255,255,255,0.08);
        }

        .label {
            color: var(--text-muted);
            font-size: 0.8rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .label i {
            font-size: 0.9rem;
            color: var(--primary-blue);
        }

        .value {
            font-weight: 600;
            color: var(--text-main);
            font-size: 0.9rem;
            text-align: right;
            white-space: nowrap;
        }

        .value.low-stock {
            color: var(--danger);
        }

        .value.expired {
            color: var(--danger);
        }

        .value.warning {
            color: var(--warning);
        }

        /* Card Footer - FIXED POSITION AT BOTTOM */
        .card-footer {
            padding: 15px 18px;
            border-top: 1px solid rgba(0,0,0,0.05);
            display: flex;
            gap: 10px;
            flex-shrink: 0; /* Don't shrink */
        }

        body.dark-mode-active .card-footer {
            border-top-color: rgba(255,255,255,0.05);
        }

        .action-btn {
            flex: 1;
            padding: 11px 16px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            font-family: inherit;
            font-size: 0.85rem;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 6px;
            transition: all 0.2s;
        }

        .btn-edit {
            background: var(--primary-blue);
            color: white;
        }

        .btn-edit:hover {
            background: #1e6bb8;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(46, 134, 222, 0.3);
        }

        .btn-delete {
            background: rgba(255, 107, 107, 0.1);
            color: var(--danger);
        }

        .btn-delete:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        }

        /* Empty State */
        .empty-state {
            grid-column: 1 / -1; text-align: center; padding: 60px 20px; color: var(--text-muted);
            background: rgba(255,255,255,0.5); border-radius: 16px; border: 2px dashed var(--primary-blue);
        }
        .empty-state i { font-size: 4rem; margin-bottom: 20px; opacity: 0.5; color: var(--primary-blue); }
        body.dark-mode-active .empty-state { background: rgba(0,0,0,0.2); }

        /* Notification */
        #notificationContainer { position: fixed; top: 20px; right: 20px; z-index: 10000; width: 350px; display: flex; flex-direction: column; gap: 10px; pointer-events: none; }
        .notification { padding: 15px; border-radius: 8px; color: white; margin-bottom: 10px; animation: slideIn 0.3s; display: flex; align-items: center; gap: 10px; pointer-events: auto; box-shadow: 0 5px 15px rgba(0,0,0,0.2); }
        .notif-success { background: var(--success); }
        .notif-error { background: var(--danger); }
        @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }

        @media (max-width: 768px) {
            .nav-menu { display: none; }
            .header-section { flex-direction: column; align-items: stretch; text-align: center; }
            .add-btn { width: 100%; justify-content: center; }
            .search-wrapper { margin-top: 20px; }
        }
    </style>
</head>
<body>

    <nav>
        <div class="nav-container">
            <a href="/" class="logo"><i class="fas fa-book-open" style="color: var(--primary-orange);"></i> Kapan Beli</a>
            <div class="nav-menu">
                <a href="/" class="nav-link">Beranda</a>
                <a href="/notes" class="nav-link">Catatan Saya</a>
                <a href="/products" class="nav-link active">Bahan Saya</a>
                <a href="/suggestions" class="nav-link">Saran Pembelian</a>
            </div>
            <div style="display: flex; align-items: center; gap: 15px;">
                <span id="userName" style="font-size: 0.85rem; font-weight: 600; color: var(--text-main); display: none;">User</span>
                <a href="/auth/logout" class="nav-link" style="font-size: 0.85rem;">Keluar</a>
                <button class="dark-mode-toggle"><i class="fas fa-moon"></i></button>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="header-section">
            <div class="page-title"><i class="fas fa-clipboard" style="color: var(--primary-blue);"></i> Catatan Stok Dapur</div>
            <a href="/products/add" class="add-btn"><i class="fas fa-pen-fancy"></i> Tulis Catatan Baru</a>
        </div>

        <div class="search-wrapper">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" placeholder="Cari di catatan (cth: Bawang, Susu)...">
        </div>

        <div class="products-grid" id="productsGrid">
            <!-- Data rendered via JS -->
        </div>
    </div>

    <div id="notificationContainer"></div>

    <script>
        // --- LOGIC SERVER UTAMA (INTAK DIPERTAHANKAN) ---
        
        // 1. Auth & Dark Mode
        async function loadUserInfo() {
            try {
                const res = await fetch('/auth/status');
                const data = await res.json();
                if (data.authenticated) {
                    const userEl = document.getElementById('userName');
                    userEl.textContent = data.user.name;
                    userEl.style.display = 'block';
                } else window.location.href = '/auth';
            } catch(e) { window.location.href = '/auth'; }
        }

        const toggleBtn = document.querySelector('.dark-mode-toggle');
        const body = document.body;
        if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            body.classList.add('dark-mode-active');
            toggleBtn.innerHTML = '<i class="fas fa-sun"></i>';
        }
        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode-active');
            const isDark = body.classList.contains('dark-mode-active');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            toggleBtn.innerHTML = isDark ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
        });

        document.getElementById('logoutLink')?.addEventListener('click', async (e) => {
            e.preventDefault();
            const response = await fetch('/auth/logout', { method: 'POST', credentials: 'same-origin' });
            const data = await response.json();
            if (response.ok) {
                window.location.href = data.redirect || '/';
            }
        });

        // 2. Notification System
        function showNotification(msg, type = 'success') {
            const div = document.createElement('div');
            div.className = `notification notif-${type}`;
            div.innerHTML = `<i class="fas ${type==='success'?'fa-check-circle':'fa-exclamation-circle'}"></i> <span>${msg}</span>`;
            document.getElementById('notificationContainer').appendChild(div);
            setTimeout(() => div.remove(), 3000);
        }

        // 3. Product Logic (Fetch, Render, Delete)
        async function loadProducts() {
            try {
                const res = await fetch('/api/products');
                const data = await res.json();
                renderProducts(data.success ? data.products : []);
            } catch (err) {
                console.error(err);
            }
        }

        // MODIFIED: renderProducts untuk menyesuaikan tampilan MODERN CARD
        function renderProducts(items) {
            const grid = document.getElementById('productsGrid');
            grid.innerHTML = '';

            if (items.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-box-open"></i>
                        <h3>Belum ada bahan</h3>
                        <p>Stok dapur Anda masih kosong.</p>
                    </div>`;
                return;
            }

            items.forEach(item => {
                const isLow = parseFloat(item.stock_quantity) <= parseFloat(item.min_stock_level);
                const isExpired = item.expiry_date && new Date(item.expiry_date) < new Date();
                const isExpiringSoon = item.expiry_date && (() => {
                    const diffDays = Math.ceil((new Date(item.expiry_date) - new Date()) / (1000 * 60 * 60 * 24));
                    return diffDays >= 0 && diffDays <= 3;
                })();
                
                // Tentukan icon jika tidak ada gambar
                let iconClass = 'fa-box-open';
                if (item.name.toLowerCase().includes('ayam')) iconClass = 'fa-drumstick-bite';
                else if (item.name.toLowerCase().includes('susu')) iconClass = 'fa-glass-whiskey';
                else if (item.name.toLowerCase().includes('telur')) iconClass = 'fa-egg';
                else if (item.name.toLowerCase().includes('bawang')) iconClass = 'fa-seedling';
                else if (item.name.toLowerCase().includes('beras')) iconClass = 'fa-wheat';
                else if (item.name.toLowerCase().includes('cabai')) iconClass = 'fa-pepper-hot';
                else if (item.name.toLowerCase().includes('minyak')) iconClass = 'fa-bottle-droplet';

                // Stock indicator class
                let stockClass = 'normal';
                if (parseFloat(item.stock_quantity) <= 0) stockClass = 'empty';
                else if (isLow) stockClass = 'low';

                // Format expiry date
                const expiryDate = item.expiry_date ? (() => {
                    const d = new Date(item.expiry_date);
                    const today = new Date();
                    const diffDays = Math.ceil((d - today) / (1000 * 60 * 60 * 24));
                    
                    if (diffDays < 0) return { text: 'Kadaluarsa', class: 'expired' };
                    if (diffDays === 0) return { text: 'Hari ini', class: 'expired' };
                    if (diffDays <= 3) return { text: `${diffDays} hari lagi`, class: 'warning' };
                    
                    return { 
                        text: `${d.getDate().toString().padStart(2, '0')}/${(d.getMonth() + 1).toString().padStart(2, '0')}/${d.getFullYear()}`, 
                        class: '' 
                    };
                })() : { text: '-', class: '' };

                const card = document.createElement('div');
                card.className = 'product-card';

                // MODERN CARD Structure
                card.innerHTML = `
                    <div class="card-header">
                        <div class="stock-indicator ${stockClass}" title="${stockClass === 'empty' ? 'Habis' : stockClass === 'low' ? 'Stok Rendah' : 'Aman'}"></div>
                        <span class="category-badge">${item.category_id || 'Umum'}</span>
                        ${item.image_url 
                            ? `<img src="${item.image_url}" alt="${item.name}" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">`
                            : ''
                        }
                        <i class="fas ${iconClass} card-icon" style="${item.image_url ? 'display:none;' : ''}"></i>
                    </div>

                    <div class="card-body">
                        <h3 class="prod-name" onclick="window.location='/products/detail/${item.id}'" title="${item.name}">${item.name}</h3>

                        <div class="info-section">
                            <div class="info-row">
                                <span class="label"><i class="fas fa-cube"></i> Stok</span>
                                <span class="value ${isLow ? 'low-stock' : ''}">
                                    ${parseFloat(item.stock_quantity)} ${item.unit || ''}
                                </span>
                            </div>
                            <div class="info-row">
                                <span class="label"><i class="fas fa-calendar-alt"></i> Exp</span>
                                <span class="value ${expiryDate.class}">
                                    ${expiryDate.text}
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button class="action-btn btn-edit" onclick="handleEdit(${item.id})">
                            <i class="fas fa-edit"></i> Edit
                        </button>
                        <button class="action-btn btn-delete" onclick="handleDelete(${item.id}, '${item.name.replace(/'/g, "\\'")}')">
                            <i class="fas fa-trash"></i> Hapus
                        </button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        // 4. Actions
        function handleEdit(id) { window.location.href = `/products/edit/${id}`; }

        async function handleDelete(id, name) {
            const result = await Swal.fire({
                title: 'Hapus Catatan?',
                text: `Apakah Anda yakin ingin menghapus catatan "${name}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#FF6B6B',
                cancelButtonColor: '#2E86DE',
                confirmButtonText: 'Ya, hapus!',
                cancelButtonText: 'Batal',
                background: body.classList.contains('dark-mode-active') ? '#2d3b45' : '#fff',
                color: body.classList.contains('dark-mode-active') ? '#fff' : '#2C3E50'
            });

            if (result.isConfirmed) {
                try {
                    const res = await fetch(`/api/products/${id}`, { method: 'DELETE' });
                    const data = await res.json();
                    if(data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Terhapus!',
                            text: `"${name}" telah dihapus dari catatan.`,
                            confirmButtonText: 'OK',
                            background: body.classList.contains('dark-mode-active') ? '#2d3b45' : '#fff',
                            color: body.classList.contains('dark-mode-active') ? '#fff' : '#2C3E50'
                        });
                        window.dispatchEvent(new CustomEvent('productAdded'));
                        loadProducts();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Gagal',
                            text: data.message || 'Terjadi kesalahan.',
                            confirmButtonText: 'OK'
                        });
                    }
                } catch(e) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Gagal terhubung ke server.',
                        confirmButtonText: 'OK'
                    });
                }
            }
        }

        // 5. Search
        document.getElementById('searchInput').addEventListener('input', async (e) => {
            const q = e.target.value.toLowerCase();
            const res = await fetch('/api/products');
            const data = await res.json();
            if(data.success) {
                const filtered = data.products.filter(p => p.name.toLowerCase().includes(q) || (p.category_id && p.category_id.toLowerCase().includes(q)));
                renderProducts(filtered);
            }
        });

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            loadUserInfo();
            loadProducts();
        });
    </script>
